---
// OAuth callback handler
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Authenticating...</title>
		<style>
			body {
				margin: 0;
				padding: 0;
				font-family:
					system-ui,
					-apple-system,
					sans-serif;
				display: flex;
				align-items: center;
				justify-content: center;
				min-height: 100vh;
				background: linear-gradient(135deg, #6366f1 0%, #4338ca 100%);
			}
			.container {
				text-align: center;
				color: white;
			}
			.spinner {
				width: 50px;
				height: 50px;
				margin: 0 auto 20px;
				border: 4px solid rgba(255, 255, 255, 0.3);
				border-top-color: white;
				border-radius: 50%;
				animation: spin 1s linear infinite;
			}
			@keyframes spin {
				to {
					transform: rotate(360deg);
				}
			}
			.message {
				font-size: 18px;
				margin-bottom: 10px;
			}
			.sub-message {
				font-size: 14px;
				opacity: 0.8;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<div class="spinner"></div>
			<div class="message">Completing sign-in...</div>
			<div class="sub-message">Please wait</div>
		</div>

		<script>
			import { authBridge } from '../../lib/supa';

			function showError() {
				const messageEl = document.querySelector('.message');
				const subMessageEl = document.querySelector('.sub-message');
				if (messageEl) messageEl.textContent = 'Authentication failed';
				if (subMessageEl) subMessageEl.textContent = 'Redirecting...';
				setTimeout(() => {
					window.location.href = '/';
				}, 2000);
			}

			(async () => {
				try {
					// Race the callback against a 10s timeout so the page never hangs.
					const session = await Promise.race([
						authBridge.handleCallback(),
						new Promise<null>((_, reject) =>
							setTimeout(
								() =>
									reject(
										new Error('Auth callback timed out'),
									),
								10_000,
							),
						),
					]);

					if (session) {
						// Session is stored in IDBStorage by authBridge â€” the homepage's
						// DroidProvider + ReactNavBar will pick it up via bootAuth.
						window.location.href = '/';
					} else {
						showError();
					}
				} catch (error) {
					console.error('Auth callback error:', error);
					showError();
				}
			})();
		</script>
	</body>
</html>
