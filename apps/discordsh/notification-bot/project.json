{
	"name": "notification-bot",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/discordsh/notification-bot/notification-bot",
	"release": {
		"version": {
			"generator": "@nxlv/python:release-version",
			"useLegacyVersioning": true
		}
	},
	"tags": [],
	"targets": {
		"lock": {
			"executor": "@nxlv/python:run-commands",
			"options": {
				"command": "uv lock",
				"cwd": "apps/discordsh/notification-bot"
			}
		},
		"add": {
			"executor": "@nxlv/python:add",
			"options": {}
		},
		"update": {
			"executor": "@nxlv/python:update",
			"options": {}
		},
		"remove": {
			"executor": "@nxlv/python:remove",
			"options": {}
		},
		"build": {
			"executor": "@nxlv/python:build",
			"outputs": ["{projectRoot}/dist"],
			"options": {
				"outputPath": "apps/discordsh/notification-bot/dist",
				"publish": false,
				"lockedVersions": true,
				"bundleLocalDependencies": true
			},
			"cache": true
		},
		"install": {
			"executor": "@nxlv/python:install",
			"options": {
				"silent": false,
				"args": "",
				"verbose": false,
				"debug": false
			}
		},
		"lint": {
			"executor": "@nxlv/python:flake8",
			"outputs": [
				"{workspaceRoot}/reports/apps/discordsh/notification-bot/pylint.txt"
			],
			"options": {
				"outputFile": "reports/apps/discordsh/notification-bot/pylint.txt"
			},
			"cache": true
		},
		"test": {
			"executor": "@nxlv/python:run-commands",
			"outputs": [
				"{workspaceRoot}/reports/apps/discordsh/notification-bot/unittests",
				"{workspaceRoot}/coverage/apps/discordsh/notification-bot"
			],
			"options": {
				"command": "uv run pytest tests/",
				"cwd": "apps/discordsh/notification-bot"
			},
			"cache": true
		},
		"container": {
			"executor": "@nx-tools/nx-container:build",
			"defaultConfiguration": "local",
			"options": {
				"engine": "docker",
				"context": "apps/discordsh/notification-bot",
				"file": "apps/discordsh/notification-bot/Dockerfile",
				"platforms": ["linux/amd64"],
				"metadata": {
					"images": ["kbve/notification-bot"],
					"load": true,
					"tags": ["1.7.2"]
				},
				"configurations": {
					"local": {
						"tags": ["1.7.2"],
						"push": false
					},
					"production": {
						"tags": ["1.7.2"],
						"push": true,
						"customBuildOptions": "--push",
						"cache-from": [
							"type=registry,ref=kbve/notification-bot:buildcache"
						],
						"cache-to": [
							"type=registry,ref=kbve/notification-bot:buildcache,mode=max"
						]
					}
				}
			}
		},
		"orb": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					{
						"command": "pnpm nx container notification-bot",
						"forwardAllArgs": false
					},
					{
						"command": "docker run --env-file .env -p 3000:3000 kbve/notification-bot:1.7.2",
						"forwardAllArgs": false
					}
				],
				"parallel": false
			}
		}
	}
}
