---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
---

<Layout title="Support" description="Discord.sh Support Center">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Page Header -->
					<div class="mb-8">
						<h1 class="text-3xl font-bold text-purple-300 mb-2">Support Center</h1>
						<p class="text-gray-400">Get help with Discord.sh</p>
					</div>

					<div class="bento-grid-3">
						<!-- Contact Form -->
						<div
							class="bg-[#312d4b] p-6 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-2 md:row-span-3">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Contact Support</h3>
							<form class="space-y-4">
								<div>
									<label class="block text-sm text-gray-400 mb-2">Subject</label>
									<input
										type="text"
										placeholder="Brief description of your issue"
										class="w-full bg-gray-700 text-white p-3 rounded focus:outline-none focus:ring-2 focus:ring-purple-500"
									/>
								</div>
								<div>
									<label class="block text-sm text-gray-400 mb-2">Category</label>
									<select class="w-full bg-gray-700 text-white p-3 rounded focus:outline-none focus:ring-2 focus:ring-purple-500">
										<option>Technical Issue</option>
										<option>Billing Question</option>
										<option>Feature Request</option>
										<option>General Inquiry</option>
										<option>Bug Report</option>
									</select>
								</div>
								<div>
									<label class="block text-sm text-gray-400 mb-2">Message</label>
									<textarea
										placeholder="Describe your issue in detail..."
										rows="6"
										class="w-full bg-gray-700 text-white p-3 rounded focus:outline-none focus:ring-2 focus:ring-purple-500 resize-none"
									></textarea>
								</div>
								<button type="submit" class="w-full bg-purple-700 text-white px-6 py-3 rounded hover:bg-purple-600 transition">
									Send Message
								</button>
							</form>
						</div>

						<!-- Quick Help -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Quick Help</h3>
							<div class="space-y-3">
								<div class="p-3 bg-gray-800/50 rounded-lg">
									<h4 class="text-white font-medium mb-1">üìö Documentation</h4>
									<p class="text-xs text-gray-400 mb-2">Browse our comprehensive guides</p>
									<a href="/docs" class="text-purple-400 text-sm hover:text-purple-300">
										View Docs ‚Üí
									</a>
								</div>
								<div class="p-3 bg-gray-800/50 rounded-lg">
									<h4 class="text-white font-medium mb-1">üí¨ Discord Server</h4>
									<p class="text-xs text-gray-400 mb-2">Join our community for help</p>
									<a href="https://discord.gg/discord-sh" class="text-purple-400 text-sm hover:text-purple-300">
										Join Discord ‚Üí
									</a>
								</div>
								<div class="p-3 bg-gray-800/50 rounded-lg">
									<h4 class="text-white font-medium mb-1">üìß Email Support</h4>
									<p class="text-xs text-gray-400 mb-2">Direct email assistance</p>
									<a href="mailto:support@discord.sh" class="text-purple-400 text-sm hover:text-purple-300">
										support@discord.sh
									</a>
								</div>
							</div>
						</div>

						<!-- Response Time -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Average Response Time</h3>
							<div class="text-center">
								<p class="text-3xl font-bold text-purple-300">2-4</p>
								<p class="text-sm text-gray-400">hours</p>
							</div>
							<p class="text-xs text-gray-500 mt-3">During business hours (9AM-5PM EST)</p>
						</div>

						<!-- FAQ Section -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-3 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Frequently Asked Questions</h3>
							<div class="space-y-3">
								<details class="group">
									<summary class="cursor-pointer p-3 bg-gray-800/50 rounded-lg hover:bg-gray-800/70 transition">
										<span class="text-white font-medium">How do I reset my password?</span>
									</summary>
									<div class="p-3 text-sm text-gray-400">
										You can reset your password by clicking the "Forgot Password" link on the login page. You'll receive an email with instructions to reset your password.
									</div>
								</details>
								
								<details class="group">
									<summary class="cursor-pointer p-3 bg-gray-800/50 rounded-lg hover:bg-gray-800/70 transition">
										<span class="text-white font-medium">How do I upgrade my plan?</span>
									</summary>
									<div class="p-3 text-sm text-gray-400">
										Navigate to your account settings and click on the "Billing" tab. From there, you can view available plans and upgrade your subscription.
									</div>
								</details>

								<details class="group">
									<summary class="cursor-pointer p-3 bg-gray-800/50 rounded-lg hover:bg-gray-800/70 transition">
										<span class="text-white font-medium">Can I cancel my subscription anytime?</span>
									</summary>
									<div class="p-3 text-sm text-gray-400">
										Yes, you can cancel your subscription at any time from your account settings. Your access will continue until the end of your current billing period.
									</div>
								</details>

								<details class="group">
									<summary class="cursor-pointer p-3 bg-gray-800/50 rounded-lg hover:bg-gray-800/70 transition">
										<span class="text-white font-medium">How do I add a bot to my server?</span>
									</summary>
									<div class="p-3 text-sm text-gray-400">
										Go to the Bots section in your dashboard, click "Add Bot," and follow the authorization flow. Make sure you have the necessary permissions on the target server.
									</div>
								</details>
							</div>
						</div>

						<!-- System Status -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">System Status</h3>
							<div class="space-y-2">
								<div class="flex items-center justify-between">
									<span class="text-sm text-gray-300">API</span>
									<span class="text-xs text-green-400">‚óè Operational</span>
								</div>
								<div class="flex items-center justify-between">
									<span class="text-sm text-gray-300">Bot Services</span>
									<span class="text-xs text-green-400">‚óè Operational</span>
								</div>
								<div class="flex items-center justify-between">
									<span class="text-sm text-gray-300">Dashboard</span>
									<span class="text-xs text-green-400">‚óè Operational</span>
								</div>
							</div>
							<a href="/status" class="block text-purple-400 text-xs mt-3 hover:text-purple-300">
								View full status ‚Üí
							</a>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</Layout>