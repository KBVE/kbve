---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
---

<Layout title="Servers" description="Discord.sh Server Management">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Page Header -->
					<div class="mb-8">
						<h1 class="text-3xl font-bold text-purple-300 mb-2">Server Management</h1>
						<p class="text-gray-400">Monitor and manage your Discord servers</p>
					</div>

					<div class="bento-grid-3">
						<!-- Server Stats Overview -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-3 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Quick Stats</h3>
							<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
								<div>
									<p class="text-2xl font-bold text-purple-300">12</p>
									<p class="text-xs text-gray-500">Total Servers</p>
								</div>
								<div>
									<p class="text-2xl font-bold text-green-400">8</p>
									<p class="text-xs text-gray-500">Online</p>
								</div>
								<div>
									<p class="text-2xl font-bold text-yellow-400">3</p>
									<p class="text-xs text-gray-500">Maintenance</p>
								</div>
								<div>
									<p class="text-2xl font-bold text-red-400">1</p>
									<p class="text-xs text-gray-500">Offline</p>
								</div>
							</div>
						</div>

						<!-- Server List -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-2 md:row-span-3">
							<h3 class="text-sm text-gray-400 mb-4">Your Servers</h3>
							<div class="space-y-3">
								<!-- Server Item -->
								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition">
									<div class="flex items-center justify-between">
										<div>
											<h4 class="text-white font-medium">Gaming Hub</h4>
											<p class="text-xs text-gray-400">1,245 members</p>
										</div>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">Online</span>
									</div>
								</div>
								
								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition">
									<div class="flex items-center justify-between">
										<div>
											<h4 class="text-white font-medium">Dev Community</h4>
											<p class="text-xs text-gray-400">892 members</p>
										</div>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">Online</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition">
									<div class="flex items-center justify-between">
										<div>
											<h4 class="text-white font-medium">Music Lounge</h4>
											<p class="text-xs text-gray-400">456 members</p>
										</div>
										<span class="px-2 py-1 text-xs bg-yellow-500/20 text-yellow-400 rounded">Maintenance</span>
									</div>
								</div>
							</div>
						</div>

						<!-- Server Actions -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-2">
							<h3 class="text-sm text-gray-400 mb-4">Quick Actions</h3>
							<div class="space-y-2">
								<button class="w-full bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-600 transition">
									Add New Server
								</button>
								<button class="w-full bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 transition">
									Import Server
								</button>
								<button class="w-full bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 transition">
									Server Settings
								</button>
							</div>
						</div>

						<!-- Recent Activity -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Recent Activity</h3>
							<div class="text-xs space-y-1 text-gray-500">
								<p>• Server "Gaming Hub" updated</p>
								<p>• New bot added to "Dev Community"</p>
								<p>• Maintenance scheduled for "Music Lounge"</p>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</Layout>