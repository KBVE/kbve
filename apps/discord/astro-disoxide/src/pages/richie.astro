---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
---

<Layout title="Richie - Co-Author" description="Meet Richie, Co-Author of DiscordSH">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Hero Section -->
					<div class="mb-8 text-center">
						<h1 class="text-4xl font-bold text-purple-300 mb-4">
							Richie
						</h1>
						<p class="text-xl text-gray-400">
							Co-Author & Developer
						</p>
					</div>

					<div class="bento-grid-3">
						<!-- About Card -->
						<div
							class="bg-[#312d4b] p-6 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-2 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-3">
								About Richie
							</h3>
							<p class="text-gray-300 mb-4">
								Passionate developer and co-author of DiscordSH, bringing innovative solutions to Discord bot development.
							</p>
							<p class="text-gray-300">
								Specializing in real-time systems, bot architecture, and creating seamless user experiences.
							</p>
						</div>

						<!-- Contributions -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400">Contributions</h3>
							<p class="text-xl font-bold text-purple-300">1,337</p>
							<p class="text-xs text-gray-500 mt-1">Commits</p>
						</div>

						<!-- Projects -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400">Projects</h3>
							<p class="text-xl font-bold text-purple-300">12</p>
							<p class="text-xs text-gray-500 mt-1">Active</p>
						</div>

						<!-- Skills -->
						<div
							class="bg-[#312d4b] p-6 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-2 md:row-span-1">
							<h3 class="text-lg font-semibold text-purple-300 mb-3">
								Technical Stack
							</h3>
							<div class="flex flex-wrap gap-2">
								<span class="px-3 py-1 bg-purple-700/30 text-purple-300 rounded-full text-sm">
									TypeScript
								</span>
								<span class="px-3 py-1 bg-purple-700/30 text-purple-300 rounded-full text-sm">
									Discord.js
								</span>
								<span class="px-3 py-1 bg-purple-700/30 text-purple-300 rounded-full text-sm">
									Rust
								</span>
								<span class="px-3 py-1 bg-purple-700/30 text-purple-300 rounded-full text-sm">
									Node.js
								</span>
								<span class="px-3 py-1 bg-purple-700/30 text-purple-300 rounded-full text-sm">
									PostgreSQL
								</span>
								<span class="px-3 py-1 bg-purple-700/30 text-purple-300 rounded-full text-sm">
									Kubernetes
								</span>
							</div>
						</div>

						<!-- Contact -->
						<div
							class="md:col-span-2 md:row-span-1 bg-[#312d4b] p-6 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1">
							<div class="flex items-center justify-between">
								<div>
									<h3 class="text-lg font-semibold text-purple-300 mb-2">
										Get in Touch
									</h3>
									<p class="text-gray-400 text-sm">
										Interested in collaboration or have questions?
									</p>
								</div>
								<div class="flex gap-4">
									<a
										href="https://github.com/richie"
										target="_blank"
										class="bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-600 shadow transition">
										GitHub
									</a>
									<a
										href="/support"
										class="bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-600 shadow transition">
										Contact
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</Layout>