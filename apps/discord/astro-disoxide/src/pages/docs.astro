---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
---

<Layout title="Documentation" description="Discord.sh Documentation and Guides">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Page Header -->
					<div class="mb-8">
						<h1 class="text-3xl font-bold text-purple-300 mb-2">Documentation</h1>
						<p class="text-gray-400">Everything you need to know about Discord.sh</p>
					</div>

					<div class="bento-grid-3">
						<!-- Search Bar -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-3 md:row-span-1">
							<div class="flex gap-2">
								<input
									type="text"
									placeholder="Search documentation..."
									class="flex-1 bg-gray-700 text-white p-3 rounded focus:outline-none focus:ring-2 focus:ring-purple-500"
								/>
								<button class="bg-purple-700 text-white px-6 py-3 rounded hover:bg-purple-600 transition">
									Search
								</button>
							</div>
						</div>

						<!-- Getting Started -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Getting Started</h3>
							<ul class="space-y-2">
								<li>
									<a href="/docs/quickstart" class="text-gray-300 hover:text-purple-400 transition">
										• Quick Start Guide
									</a>
								</li>
								<li>
									<a href="/docs/installation" class="text-gray-300 hover:text-purple-400 transition">
										• Installation
									</a>
								</li>
								<li>
									<a href="/docs/configuration" class="text-gray-300 hover:text-purple-400 transition">
										• Configuration
									</a>
								</li>
								<li>
									<a href="/docs/first-bot" class="text-gray-300 hover:text-purple-400 transition">
										• Your First Bot
									</a>
								</li>
							</ul>
						</div>

						<!-- API Reference -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">API Reference</h3>
							<ul class="space-y-2">
								<li>
									<a href="/docs/api/authentication" class="text-gray-300 hover:text-purple-400 transition">
										• Authentication
									</a>
								</li>
								<li>
									<a href="/docs/api/endpoints" class="text-gray-300 hover:text-purple-400 transition">
										• Endpoints
									</a>
								</li>
								<li>
									<a href="/docs/api/webhooks" class="text-gray-300 hover:text-purple-400 transition">
										• Webhooks
									</a>
								</li>
								<li>
									<a href="/docs/api/rate-limits" class="text-gray-300 hover:text-purple-400 transition">
										• Rate Limits
									</a>
								</li>
							</ul>
						</div>

						<!-- Guides -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Guides</h3>
							<ul class="space-y-2">
								<li>
									<a href="/docs/guides/bot-hosting" class="text-gray-300 hover:text-purple-400 transition">
										• Bot Hosting
									</a>
								</li>
								<li>
									<a href="/docs/guides/moderation" class="text-gray-300 hover:text-purple-400 transition">
										• Moderation Setup
									</a>
								</li>
								<li>
									<a href="/docs/guides/analytics" class="text-gray-300 hover:text-purple-400 transition">
										• Analytics Setup
									</a>
								</li>
								<li>
									<a href="/docs/guides/best-practices" class="text-gray-300 hover:text-purple-400 transition">
										• Best Practices
									</a>
								</li>
							</ul>
						</div>

						<!-- Popular Articles -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-2 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Popular Articles</h3>
							<div class="space-y-3">
								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition cursor-pointer">
									<h4 class="text-white font-medium mb-1">How to Create Custom Commands</h4>
									<p class="text-xs text-gray-400">Learn how to create and manage custom bot commands for your server</p>
								</div>
								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition cursor-pointer">
									<h4 class="text-white font-medium mb-1">Setting Up Auto-Moderation</h4>
									<p class="text-xs text-gray-400">Configure automatic moderation rules to keep your server safe</p>
								</div>
								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition cursor-pointer">
									<h4 class="text-white font-medium mb-1">Understanding Analytics</h4>
									<p class="text-xs text-gray-400">Deep dive into server analytics and member engagement metrics</p>
								</div>
							</div>
						</div>

						<!-- Help Resources -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Need Help?</h3>
							<div class="space-y-2">
								<a href="/support" class="block text-purple-400 hover:text-purple-300 transition">
									→ Contact Support
								</a>
								<a href="/docs/faq" class="block text-purple-400 hover:text-purple-300 transition">
									→ FAQ
								</a>
								<a href="https://discord.gg/discord-sh" class="block text-purple-400 hover:text-purple-300 transition">
									→ Join Discord
								</a>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</Layout>