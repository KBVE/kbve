---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
---

<Layout title="Gaming Servers" description="Find Discord gaming servers and communities">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Page Header -->
					<div class="mb-8">
						<div class="flex items-center gap-2 text-gray-400 text-sm mb-2">
							<a href="/cat" class="hover:text-purple-300">Categories</a>
							<span>â†’</span>
							<span>Gaming</span>
						</div>
						<h1 class="text-3xl font-bold text-purple-300 mb-2">ðŸŽ® Gaming Servers</h1>
						<p class="text-gray-400">Connect with gamers and find your perfect gaming community</p>
					</div>

					<div class="bento-grid-3">
						<!-- Featured Servers -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-2 md:row-span-3">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Featured Gaming Servers</h3>
							<div class="space-y-3">
								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Valorant Central</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">12.5k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">Premier Valorant community with ranked teams, tournaments, and coaching</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-purple-600/20 text-purple-300 rounded">Valorant</span>
										<span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-300 rounded">Competitive</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Minecraft Builders</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">8.2k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">Creative Minecraft community for builders, redstone engineers, and explorers</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-green-600/20 text-green-300 rounded">Minecraft</span>
										<span class="px-2 py-1 text-xs bg-yellow-600/20 text-yellow-300 rounded">Creative</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">League Legends Hub</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">15.8k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">League of Legends community with coaching, duo finder, and esports discussions</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-300 rounded">League of Legends</span>
										<span class="px-2 py-1 text-xs bg-red-600/20 text-red-300 rounded">Esports</span>
									</div>
								</div>
							</div>
						</div>

						<!-- Game Categories -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Popular Games</h3>
							<div class="space-y-2">
								<div class="p-2 bg-purple-600/10 rounded border border-purple-500/30 cursor-pointer hover:bg-purple-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Valorant</span>
										<span class="text-xs text-gray-400">2.1k servers</span>
									</div>
								</div>
								<div class="p-2 bg-purple-600/10 rounded border border-purple-500/30 cursor-pointer hover:bg-purple-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Minecraft</span>
										<span class="text-xs text-gray-400">3.5k servers</span>
									</div>
								</div>
								<div class="p-2 bg-purple-600/10 rounded border border-purple-500/30 cursor-pointer hover:bg-purple-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">League of Legends</span>
										<span class="text-xs text-gray-400">1.8k servers</span>
									</div>
								</div>
								<div class="p-2 bg-purple-600/10 rounded border border-purple-500/30 cursor-pointer hover:bg-purple-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Fortnite</span>
										<span class="text-xs text-gray-400">1.2k servers</span>
									</div>
								</div>
								<div class="p-2 bg-purple-600/10 rounded border border-purple-500/30 cursor-pointer hover:bg-purple-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Apex Legends</span>
										<span class="text-xs text-gray-400">950 servers</span>
									</div>
								</div>
							</div>
						</div>

						<!-- Server Types -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Server Types</h3>
							<div class="space-y-2">
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-purple-600/20 text-sm text-gray-300 hover:text-white transition">
									Competitive Teams
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-purple-600/20 text-sm text-gray-300 hover:text-white transition">
									Casual Gaming
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-purple-600/20 text-sm text-gray-300 hover:text-white transition">
									LFG (Looking for Group)
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-purple-600/20 text-sm text-gray-300 hover:text-white transition">
									Game Development
								</button>
							</div>
						</div>

						<!-- Quick Stats -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-3 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Gaming Category Stats</h3>
							<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
								<div class="text-center">
									<p class="text-2xl font-bold text-purple-300">12.5k</p>
									<p class="text-xs text-gray-500">Gaming Servers</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-green-400">2.1M</p>
									<p class="text-xs text-gray-500">Total Members</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-yellow-400">150+</p>
									<p class="text-xs text-gray-500">Supported Games</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-blue-400">24/7</p>
									<p class="text-xs text-gray-500">Active Communities</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</Layout>