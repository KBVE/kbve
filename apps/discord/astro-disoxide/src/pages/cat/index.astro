---

<Layout title="Categories" description="Discord Server Categories - Find the perfect server for your interests">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Page Header -->
					<div class="mb-8 text-center">
						<h1 class="text-3xl font-bold text-purple-300 mb-2">Server Categories</h1>
						<p class="text-gray-400">Explore Discord servers by category</p>
					</div>

					<div class="bento-grid-3">
						{/* Main Categories */}
						{mainCategories.map((category) => (
							<a href={category.href} class="bg-[#312d4b] p-6 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-2 block transition-all duration-200 hover:scale-[1.02] cursor-pointer">
								<div class="text-center mb-4">
									<div class="text-4xl mb-3">{category.emoji}</div>
									<h3 class="text-xl font-bold text-white mb-2">{category.title}</h3>
									<p class="text-sm text-gray-400 mb-4">{category.description}</p>
								</div>
								<div class="space-y-2">
									<p class="text-xs text-gray-500">{category.tagLabel}</p>
									<div class="flex flex-wrap gap-1">
										{category.tags.map((tag) => (
											<span class="px-2 py-1 text-xs bg-purple-600/20 text-purple-300 rounded">{tag}</span>
										))}
									</div>
								</div>
								<div class="w-full bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-600 transition text-center mt-4">
									Explore {category.title} Servers
								</div>
							</a>
						))}

						{/* More Categories */}
						<div class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-3 md:row-span-1">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">More Categories</h3>
							<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
								{moreCategories.map((category) => (
									<a href={category.href} class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-purple-500/50 transition text-center">
										<div class="text-2xl mb-1">{category.emoji}</div>
										<h4 class="text-white font-medium text-sm">{category.title}</h4>
										<p class="text-xs text-gray-400">{category.description}</p>
									</a>
								))}
							</div>
						</div>

						{/* NSFW Category */}
						<a href="/cat/nsfw" class="bg-[#312d4b] p-4 rounded shadow-xl border-red-500/20 hover:border-red-500 border-1 md:col-span-3 md:row-span-1 block transition-all duration-200 hover:scale-[1.02] cursor-pointer">
							<div class="flex items-center justify-between">
								<div>
									<h3 class="text-lg font-semibold text-red-300 mb-2">18+ Adult Content</h3>
									<p class="text-sm text-gray-400">Age-restricted servers for mature audiences only</p>
								</div>
								<div class="hidden md:block">
									<div class="bg-red-700 text-white px-6 py-2 rounded hover:bg-red-600 transition">
										Enter (18+)
									</div>
								</div>
							</div>
							<div class="md:hidden mt-4">
								<div class="w-full bg-red-700 text-white px-4 py-2 rounded hover:bg-red-600 transition text-center">
									Enter (18+)
								</div>
							</div>
						</a>
