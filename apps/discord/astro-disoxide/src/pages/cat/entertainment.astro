---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
---

<Layout title="Entertainment Servers" description="Find Discord entertainment communities for movies, music, and TV shows">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Page Header -->
					<div class="mb-8">
						<div class="flex items-center gap-2 text-gray-400 text-sm mb-2">
							<a href="/cat" class="hover:text-purple-300">Categories</a>
							<span>â†’</span>
							<span>Entertainment</span>
						</div>
						<h1 class="text-3xl font-bold text-yellow-300 mb-2">ðŸŽ­ Entertainment Servers</h1>
						<p class="text-gray-400">Movies, music, TV shows, and general entertainment communities</p>
					</div>

					<div class="bento-grid-3">
						<!-- Featured Servers -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-yellow-500/20 hover:border-yellow-500 border-1 md:col-span-2 md:row-span-3">
							<h3 class="text-lg font-semibold text-yellow-300 mb-4">Featured Entertainment Communities</h3>
							<div class="space-y-3">
								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-yellow-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Movie Buffs United</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">67.3k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">Ultimate movie discussion community with reviews, recommendations, and watch parties</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-yellow-600/20 text-yellow-300 rounded">Movies</span>
										<span class="px-2 py-1 text-xs bg-red-600/20 text-red-300 rounded">Reviews</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-yellow-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Music Discovery Hub</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">54.8k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">Share music, discover new artists, and discuss all genres with fellow music lovers</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-purple-600/20 text-purple-300 rounded">Music</span>
										<span class="px-2 py-1 text-xs bg-pink-600/20 text-pink-300 rounded">Discovery</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-yellow-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">TV Series Central</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">42.1k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">TV show discussions, episode reviews, and series recommendations</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-300 rounded">TV Shows</span>
										<span class="px-2 py-1 text-xs bg-green-600/20 text-green-300 rounded">Episodes</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-yellow-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Comedy Corner</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">28.5k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">Stand-up comedy, memes, and humor discussion community</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-orange-600/20 text-orange-300 rounded">Comedy</span>
										<span class="px-2 py-1 text-xs bg-teal-600/20 text-teal-300 rounded">Memes</span>
									</div>
								</div>
							</div>
						</div>

						<!-- Entertainment Types -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-yellow-500/20 hover:border-yellow-500 border-1 md:col-span-1 md:row-span-2">
							<h3 class="text-lg font-semibold text-yellow-300 mb-4">Categories</h3>
							<div class="space-y-2">
								<div class="p-2 bg-yellow-600/10 rounded border border-yellow-500/30 cursor-pointer hover:bg-yellow-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Movies</span>
										<span class="text-xs text-gray-400">2.1k servers</span>
									</div>
								</div>
								<div class="p-2 bg-yellow-600/10 rounded border border-yellow-500/30 cursor-pointer hover:bg-yellow-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Music</span>
										<span class="text-xs text-gray-400">1.9k servers</span>
									</div>
								</div>
								<div class="p-2 bg-yellow-600/10 rounded border border-yellow-500/30 cursor-pointer hover:bg-yellow-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">TV Shows</span>
										<span class="text-xs text-gray-400">1.7k servers</span>
									</div>
								</div>
								<div class="p-2 bg-yellow-600/10 rounded border border-yellow-500/30 cursor-pointer hover:bg-yellow-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Books</span>
										<span class="text-xs text-gray-400">980 servers</span>
									</div>
								</div>
								<div class="p-2 bg-yellow-600/10 rounded border border-yellow-500/30 cursor-pointer hover:bg-yellow-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Comedy</span>
										<span class="text-xs text-gray-400">750 servers</span>
									</div>
								</div>
							</div>
						</div>

						<!-- Activity Types -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-yellow-500/20 hover:border-yellow-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Activities</h3>
							<div class="space-y-2">
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-yellow-600/20 text-sm text-gray-300 hover:text-white transition">
									Watch Parties
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-yellow-600/20 text-sm text-gray-300 hover:text-white transition">
									Listening Sessions
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-yellow-600/20 text-sm text-gray-300 hover:text-white transition">
									Reviews & Ratings
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-yellow-600/20 text-sm text-gray-300 hover:text-white transition">
									Trivia Games
								</button>
							</div>
						</div>

						<!-- Quick Stats -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-yellow-500/20 hover:border-yellow-500 border-1 md:col-span-3 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Entertainment Category Stats</h3>
							<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
								<div class="text-center">
									<p class="text-2xl font-bold text-yellow-300">7.3k</p>
									<p class="text-xs text-gray-500">Entertainment Servers</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-green-400">1.5M</p>
									<p class="text-xs text-gray-500">Entertainment Fans</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-purple-400">400+</p>
									<p class="text-xs text-gray-500">Daily Watch Parties</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-blue-400">24/7</p>
									<p class="text-xs text-gray-500">Discussions</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</Layout>