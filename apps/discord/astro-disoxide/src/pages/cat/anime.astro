---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
---

<Layout title="Anime Servers" description="Find Discord anime and manga communities">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Page Header -->
					<div class="mb-8">
						<div class="flex items-center gap-2 text-gray-400 text-sm mb-2">
							<a href="/cat" class="hover:text-purple-300">Categories</a>
							<span>â†’</span>
							<span>Anime</span>
						</div>
						<h1 class="text-3xl font-bold text-pink-300 mb-2">ðŸŒ¸ Anime Servers</h1>
						<p class="text-gray-400">Discover anime, manga, and Japanese culture communities</p>
					</div>

					<div class="bento-grid-3">
						<!-- Featured Servers -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-pink-500/20 hover:border-pink-500 border-1 md:col-span-2 md:row-span-3">
							<h3 class="text-lg font-semibold text-pink-300 mb-4">Featured Anime Servers</h3>
							<div class="space-y-3">
								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-pink-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Otaku Paradise</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">25.3k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">The largest anime community with discussions, events, and watch parties</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-pink-600/20 text-pink-300 rounded">General Anime</span>
										<span class="px-2 py-1 text-xs bg-purple-600/20 text-purple-300 rounded">Events</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-pink-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Manga Readers Hub</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">18.7k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">Dedicated manga community with reviews, recommendations, and discussions</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-blue-600/20 text-blue-300 rounded">Manga</span>
										<span class="px-2 py-1 text-xs bg-green-600/20 text-green-300 rounded">Reviews</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-pink-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Cosplay Central</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">12.1k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">Cosplay community for sharing creations, tips, and convention meetups</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-yellow-600/20 text-yellow-300 rounded">Cosplay</span>
										<span class="px-2 py-1 text-xs bg-red-600/20 text-red-300 rounded">Conventions</span>
									</div>
								</div>

								<div class="p-3 bg-gray-800/50 rounded-lg border border-gray-700 hover:border-pink-500/50 transition">
									<div class="flex items-center justify-between mb-2">
										<h4 class="text-white font-medium">Japanese Learning</h4>
										<span class="px-2 py-1 text-xs bg-green-500/20 text-green-400 rounded">9.8k members</span>
									</div>
									<p class="text-xs text-gray-400 mb-2">Learn Japanese language and culture with fellow anime enthusiasts</p>
									<div class="flex gap-2">
										<span class="px-2 py-1 text-xs bg-indigo-600/20 text-indigo-300 rounded">Japanese</span>
										<span class="px-2 py-1 text-xs bg-teal-600/20 text-teal-300 rounded">Learning</span>
									</div>
								</div>
							</div>
						</div>

						<!-- Popular Topics -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-pink-500/20 hover:border-pink-500 border-1 md:col-span-1 md:row-span-2">
							<h3 class="text-lg font-semibold text-pink-300 mb-4">Popular Topics</h3>
							<div class="space-y-2">
								<div class="p-2 bg-pink-600/10 rounded border border-pink-500/30 cursor-pointer hover:bg-pink-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Anime Discussions</span>
										<span class="text-xs text-gray-400">5.2k servers</span>
									</div>
								</div>
								<div class="p-2 bg-pink-600/10 rounded border border-pink-500/30 cursor-pointer hover:bg-pink-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Manga Reading</span>
										<span class="text-xs text-gray-400">3.8k servers</span>
									</div>
								</div>
								<div class="p-2 bg-pink-600/10 rounded border border-pink-500/30 cursor-pointer hover:bg-pink-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Cosplay</span>
										<span class="text-xs text-gray-400">2.1k servers</span>
									</div>
								</div>
								<div class="p-2 bg-pink-600/10 rounded border border-pink-500/30 cursor-pointer hover:bg-pink-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Japanese Culture</span>
										<span class="text-xs text-gray-400">1.9k servers</span>
									</div>
								</div>
								<div class="p-2 bg-pink-600/10 rounded border border-pink-500/30 cursor-pointer hover:bg-pink-600/20">
									<div class="flex items-center justify-between">
										<span class="text-sm text-white">Light Novels</span>
										<span class="text-xs text-gray-400">1.3k servers</span>
									</div>
								</div>
							</div>
						</div>

						<!-- Server Types -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-pink-500/20 hover:border-pink-500 border-1 md:col-span-1 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Community Types</h3>
							<div class="space-y-2">
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-pink-600/20 text-sm text-gray-300 hover:text-white transition">
									Watch Parties
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-pink-600/20 text-sm text-gray-300 hover:text-white transition">
									Art Sharing
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-pink-600/20 text-sm text-gray-300 hover:text-white transition">
									Role Playing
								</button>
								<button class="w-full text-left p-2 bg-gray-800/50 rounded hover:bg-pink-600/20 text-sm text-gray-300 hover:text-white transition">
									Convention Groups
								</button>
							</div>
						</div>

						<!-- Quick Stats -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-pink-500/20 hover:border-pink-500 border-1 md:col-span-3 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Anime Category Stats</h3>
							<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
								<div class="text-center">
									<p class="text-2xl font-bold text-pink-300">8.7k</p>
									<p class="text-xs text-gray-500">Anime Servers</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-green-400">1.8M</p>
									<p class="text-xs text-gray-500">Otaku Members</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-yellow-400">500+</p>
									<p class="text-xs text-gray-500">Weekly Events</p>
								</div>
								<div class="text-center">
									<p class="text-2xl font-bold text-blue-400">24/7</p>
									<p class="text-xs text-gray-500">Active Discussions</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</Layout>