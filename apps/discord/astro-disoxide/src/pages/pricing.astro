---
/** @jsxImportSource astro */

import Layout from 'src/layout/Layout.astro';
---

<Layout title="Pricing" description="Discord.sh Pricing Plans">
	<div class="flex flex-col min-h-screen overflow-y-auto">
		<div
			class="flex-1 flex flex-col w-full min-h-full transition-all duration-200 ease-in-out">
			<main class="p-6 flex-1 overflow-visible">
				<div class="max-w-7xl mx-auto w-full">
					<!-- Page Header -->
					<div class="mb-8 text-center">
						<h1 class="text-3xl font-bold text-purple-300 mb-2">Pricing Plans</h1>
						<p class="text-gray-400">Choose the perfect plan for your Discord server</p>
					</div>

					<div class="bento-grid-3">
						<!-- Free Plan -->
						<div
							class="bg-[#312d4b] p-6 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-3">
							<div class="text-center mb-4">
								<h3 class="text-xl font-bold text-white mb-2">Free</h3>
								<div class="text-3xl font-bold text-purple-300">$0</div>
								<p class="text-sm text-gray-400">per month</p>
							</div>
							<ul class="space-y-3 mb-6">
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">1 Discord Server</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Basic Bot Features</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">10 Custom Commands</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Community Support</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-gray-500">✗</span>
									<span class="text-sm text-gray-500">Analytics Dashboard</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-gray-500">✗</span>
									<span class="text-sm text-gray-500">Priority Support</span>
								</li>
							</ul>
							<button class="w-full bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 transition">
								Current Plan
							</button>
						</div>

						<!-- Pro Plan -->
						<div
							class="bg-[#312d4b] p-6 rounded shadow-xl border-purple-500 border-2 md:col-span-1 md:row-span-3 relative">
							<div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
								<span class="bg-purple-600 text-white text-xs px-3 py-1 rounded-full">Most Popular</span>
							</div>
							<div class="text-center mb-4">
								<h3 class="text-xl font-bold text-white mb-2">Pro</h3>
								<div class="text-3xl font-bold text-purple-300">$19</div>
								<p class="text-sm text-gray-400">per month</p>
							</div>
							<ul class="space-y-3 mb-6">
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">5 Discord Servers</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">All Bot Features</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Unlimited Commands</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Analytics Dashboard</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Auto-Moderation</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Priority Support</span>
								</li>
							</ul>
							<button class="w-full bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-600 transition">
								Upgrade to Pro
							</button>
						</div>

						<!-- Enterprise Plan -->
						<div
							class="bg-[#312d4b] p-6 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-1 md:row-span-3">
							<div class="text-center mb-4">
								<h3 class="text-xl font-bold text-white mb-2">Enterprise</h3>
								<div class="text-3xl font-bold text-purple-300">$99</div>
								<p class="text-sm text-gray-400">per month</p>
							</div>
							<ul class="space-y-3 mb-6">
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Unlimited Servers</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">All Pro Features</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Custom Bot Branding</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Advanced Analytics</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">Dedicated Support</span>
								</li>
								<li class="flex items-center gap-2">
									<span class="text-green-400">✓</span>
									<span class="text-sm text-gray-300">SLA Guarantee</span>
								</li>
							</ul>
							<button class="w-full bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 transition">
								Contact Sales
							</button>
						</div>

						<!-- Comparison Table -->
						<div
							class="bg-[#312d4b] p-6 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-3 md:row-span-2">
							<h3 class="text-lg font-semibold text-purple-300 mb-4">Feature Comparison</h3>
							<div class="overflow-x-auto">
								<table class="w-full text-sm">
									<thead>
										<tr class="border-b border-gray-700">
											<th class="text-left py-2 text-gray-400">Feature</th>
											<th class="text-center py-2 text-gray-400">Free</th>
											<th class="text-center py-2 text-gray-400">Pro</th>
											<th class="text-center py-2 text-gray-400">Enterprise</th>
										</tr>
									</thead>
									<tbody class="text-gray-300">
										<tr class="border-b border-gray-800">
											<td class="py-2">Discord Servers</td>
											<td class="text-center">1</td>
											<td class="text-center">5</td>
											<td class="text-center">Unlimited</td>
										</tr>
										<tr class="border-b border-gray-800">
											<td class="py-2">Custom Commands</td>
											<td class="text-center">10</td>
											<td class="text-center">Unlimited</td>
											<td class="text-center">Unlimited</td>
										</tr>
										<tr class="border-b border-gray-800">
											<td class="py-2">Analytics</td>
											<td class="text-center">✗</td>
											<td class="text-center text-green-400">✓</td>
											<td class="text-center text-green-400">✓</td>
										</tr>
										<tr class="border-b border-gray-800">
											<td class="py-2">Auto-Moderation</td>
											<td class="text-center">Basic</td>
											<td class="text-center text-green-400">✓</td>
											<td class="text-center text-green-400">✓</td>
										</tr>
										<tr class="border-b border-gray-800">
											<td class="py-2">Support</td>
											<td class="text-center">Community</td>
											<td class="text-center">Priority</td>
											<td class="text-center">Dedicated</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>

						<!-- FAQ -->
						<div
							class="bg-[#312d4b] p-4 rounded shadow-xl border-purple-500/20 hover:border-purple-500 border-1 md:col-span-3 md:row-span-1">
							<h3 class="text-sm text-gray-400 mb-3">Questions?</h3>
							<div class="flex flex-wrap gap-4">
								<a href="/docs/pricing-faq" class="text-purple-400 hover:text-purple-300">
									Pricing FAQ →
								</a>
								<a href="/support" class="text-purple-400 hover:text-purple-300">
									Contact Support →
								</a>
								<a href="/docs/billing" class="text-purple-400 hover:text-purple-300">
									Billing Documentation →
								</a>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</Layout>