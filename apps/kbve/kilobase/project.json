{
  "name": "kilobase",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/kbve/kilobase/src",
  "tags": [],
  "namedInputs": {
    "args": []
  },
  "targets": {
    "bump": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bash tools/scripts/public/kilobase/version_bump.sh {args.version}"
        ],
        "parallel": false
      },
      "outputs": [],
      "dependsOn": []
    },
    "local": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/kbve/kilobase",
        "commands": [
          "cargo pgrx package --features pg15 --out-dir='../../../dist/target/kilobase'"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/kbve/kilobase",
        "commands": [
          "cargo pgrx package --pg-config $PG_CONFIG_PATH --features pg15 --out-dir='../../../dist/target/kilobase'"
        ],
        "parallel": false
      }
    },
    "pgrx": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/kbve/kilobase",
        "commands": [
          "cargo pgrx run"
        ],
        "parallel": false
      }
    },
    "copy-requirements": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "command": "cp apps/kbve/kilobase/requirements.txt dist/target/kilobase/requirements.txt"
      }
    },
    "test": {
      "executor": "@monodon/rust:test",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/kilobase"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "lint": {
      "executor": "@monodon/rust:lint",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/kilobase"
      }
    },
    "run": {
      "executor": "@monodon/rust:run",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/kilobase"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "seal": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "tools/scripts/public/kube/etc",
        "commands": [
          "./generate-sealed-secret.sh -n \"{args.namespace}\" -k \"{args.keyName}\" -s \"{args.secrets}\""
        ],
        "parallel": false
      },
      "inputs": [
        "args"
      ]
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "defaultConfiguration": "local",
      "options": {
        "engine": "docker",
        "context": "apps/kbve/kilobase",
        "file": "apps/kbve/kilobase/Dockerfile",
        "metadata": {
          "images": [
            "kbve/kilobase"
          ],
          "load": true,
          "tags": [
            "15.1.10",
            "15.1"
          ]
        },
        "configurations": {
          "local": {
            "tags": [
              "15.1.10",
              "15.1"
            ],
            "push": false
          },
          "production": {
            "tags": [
              "15.1.10",
              "15.1"
            ],
            "push": true,
            "customBuildOptions": "--push",
            "cache-from": [
              "type=registry,ref=kbve/kilobase:buildcache"
            ],
            "cache-to": [
              "type=registry,ref=kbve/kilobase:buildcache,mode=max"
            ]
          }
        }
      }
    }
  }
}
