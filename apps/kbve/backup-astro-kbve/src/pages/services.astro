---
import Layout from 'src/layouts/core/Layout.astro';
import DashLayout from 'src/layouts/components/dashboard/layout/DashLayout.astro';

import {SITE} from 'src/layouts/site';

const pageURL: string = 'https://kbve.com/services/';
const pageTitle: string = `Services | ${SITE.title}`;
const pageDescription: string =
        'Discover how KBVE can bring your ideas to life. We provide tailored consulting alongside full‑stack app design and development services.';

---

<Layout

title={pageTitle}
	structuredData={{
		'@context': 'https://schema.org',
		'@type': 'WebPage',
		'@id': `${pageURL}`,
		url: `${pageURL}`,
		name: `${pageTitle}`,
		description: `${pageDescription}`,
		isPartOf: {
			'@type': 'WebSite',
			url: 'https://kbve.com',
			name: `${SITE.title}`,
			description: `${SITE.description}`,
		},
		inLanguage: 'en-US',
	}}>
  
    <DashLayout>

            <section class="px-6 py-12 sm:px-8 lg:px-12">
                    <div class="mx-auto max-w-7xl text-center space-y-6">
                            <h1 class="text-4xl sm:text-5xl font-bold text-white">Our Services</h1>
                            <p class="text-lg text-zinc-300">
                                    Discover how our team combines experience with creativity to deliver solutions tailored to your goals.
                            </p>
                    </div>
            </section>

            <section class="px-6 py-12 sm:px-8 lg:px-12">
                    <div class="mx-auto max-w-7xl grid gap-8 md:grid-cols-2">
                            <div class="space-y-4 p-6 rounded-3xl bg-white/5 backdrop-blur-md ring-1 ring-white/10 shadow-[inset_0_0_0.5px_rgba(255,255,255,0.15),0_20px_40px_rgba(0,0,0,0.4)]">
                                    <h2 class="text-2xl font-semibold text-cyan-400">Consulting</h2>
                                    <p class="text-base text-zinc-300">
                                            Work directly with KBVE experts to strategize, architect, and refine your project from concept to deployment.
                                    </p>
                            </div>
                            <div class="space-y-4 p-6 rounded-3xl bg-white/5 backdrop-blur-md ring-1 ring-white/10 shadow-[inset_0_0_0.5px_rgba(255,255,255,0.15),0_20px_40px_rgba(0,0,0,0.4)]">
                                    <h2 class="text-2xl font-semibold text-cyan-400">App Design &amp; Development</h2>
                                    <p class="text-base text-zinc-300">
                                            From intuitive interfaces to resilient back ends, we build full‑stack applications that empower your ideas.
                                    </p>
                            </div>
                    </div>
            </section>

            <section class="px-6 py-12 sm:px-8 lg:px-12">
                    <div class="mx-auto max-w-7xl text-center space-y-4">
                            <h2 class="text-3xl font-bold text-white">Ready to start?</h2>
                            <p class="text-base text-zinc-300">Reach out and let's transform your vision into reality.</p>
                            <a href="/contact" data-astro-prefetch class="inline-block bg-gradient-to-br from-cyan-400 to-purple-500 text-neutral-800 font-semibold py-2 px-6 rounded-full shadow hover:from-cyan-300 hover:to-purple-400 transition-all">Contact Us</a>
                    </div>
            </section>

    </DashLayout>

  </Layout>