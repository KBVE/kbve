---
import Panel from 'src/layouts/core/Panel.astro';
import DashboardFooter from 'src/layouts/components/dashboard/footer/DashboardFooter.astro';
---

<style>
	@import 'src/layouts/components/dashboard/home/components/animations.css';
</style>

<!-- Panel system - positioned absolutely, doesn't affect layout flow -->
<Panel>
	<div slot="aside">
		<!-- Custom aside content can be passed here -->
		<slot name="aside" />
	</div>
</Panel>

<div
	class="min-h-screen bg-zinc-900 text-white perspective-distant dashboard-container transition-all duration-300"
	data-grid="home">
	
	<!-- Main Dashboard Container -->
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 relative z-0">
		<div class="w-full relative z-0" aria-label="Dashboard Content">
			<slot />
		</div>
	</div>
</div>

<!-- Footer -->
<DashboardFooter />
