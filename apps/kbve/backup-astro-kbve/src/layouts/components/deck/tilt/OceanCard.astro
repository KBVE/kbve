---
const {
  title = 'Ocean Tier Access',
  price = 29,
  cycle = '/cycle',
  subtitle = 'Immerse yourself in the Ocean Tier. Flow with serene access and deep-blue level features.',
  features = [
    'Hydro-Elastic Storage',
    'Tidal Support System',
    'Abyssal Stream (4K)',
    'Aqua Analytics Flow',
    'Liquid Preview Modes',
  ],
  background = 'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=1050&q=80',
  badge = 'Deep Sea Tier'
} = Astro.props;
---

<div class="group perspective-[1800px] w-full max-w-[380px] aspect-[9/15.5] max-h-[90vh]">
  <div
    class="relative w-full h-full rounded-[1.75rem] overflow-hidden cursor-pointer transform transition-transform duration-500 ease-out bg-cover bg-center
           shadow-[0_0_0_2px_rgba(34,211,238,0.4),0_0_25px_8px_rgba(34,211,238,0.15)]
           group-hover:rotate-x-[4deg] group-hover:rotate-y-[4deg] group-hover:scale-[1.03] transform-style-3d"
    style={`background-image: url('${background}');`}
  >
    <!-- Inner border overlay -->
    <div
      class="absolute inset-[14px] rounded-[1.375rem] pointer-events-none z-10
             border border-[rgba(34,211,238,0.1)]
             shadow-[inset_0.5px_0.5px_1.5px_rgba(186,230,253,0.6),inset_-1px_-1px_1px_rgba(21,94,117,0.5),inset_3px_3px_6px_rgba(0,0,0,0.25)]
             translate-z-[30px] transform-style-3d"
    ></div>

    <!-- Content -->
    <div class="absolute inset-[14px] rounded-[1.375rem] z-20 flex flex-col justify-end p-4 sm:p-5 lg:p-7 translate-z-[60px] transform-style-3d">
      <!-- Gradient overlay -->
      <div class="absolute bottom-0 left-0 right-0 h-[75%] bg-gradient-to-t from-[rgba(0,0,0,0.9)] via-[rgba(0,0,0,0.65)] to-transparent z-10 pointer-events-none translate-z-[5px] transform-style-3d"></div>

      <!-- Badge -->
      <div class="absolute top-4 right-4 z-30 flex items-center gap-2 text-xs font-semibold bg-cyan-300/85 text-cyan-950 px-3 py-2 rounded-full shadow-md border border-white/30 translate-z-[70px] transform-style-3d">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <circle cx="12" cy="12" r="10" />
        </svg>
        {badge}
      </div>

      <!-- Text -->
      <div class="relative z-20 text-center text-slate-100 translate-z-[25px] transform-style-3d">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-2">{title}</h1>
        <p class="text-cyan-200 text-lg font-extrabold mb-1">
          <span class="text-4xl align-super text-cyan-400">${price}</span> <span class="text-base">{cycle}</span>
        </p>
        <p class="text-sm sm:text-base lg:text-lg text-slate-300 font-light">{subtitle}</p>
      </div>

      <!-- Features -->
      <ul class="relative z-20 mt-5 mb-6 space-y-3 text-sm text-cyan-100 translate-z-[30px] transform-style-3d">
      {features.map((feature: unknown) => (
        <li class="flex items-center">
          <svg class="w-5 h-5 mr-3 animate-spin" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="8" stroke="#67e8f9" stroke-width="2" stroke-dasharray="10 5" />
          </svg>
          {feature}
        </li>
      ))}
    </ul>
      <!-- Button -->
      <button class="mt-2 relative z-20 bg-gradient-to-br from-cyan-400 to-cyan-500 text-white font-semibold py-3 px-6 rounded-full shadow-md border-none w-[85%] max-w-[240px] mx-auto text-sm tracking-wide
                     hover:from-cyan-300 hover:to-cyan-400 hover:translate-y-[-2px]
                     active:from-cyan-500 active:to-cyan-600 active:translate-y-0 transition-all duration-200 ease-in-out transform translate-z-[40px]">
        Dive into Ocean
        <svg xmlns="http://www.w3.org/2000/svg" class="inline ml-2 -mb-0.5 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path d="M12 5l7 7-7 7M5 12h14" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </button>
    </div>
  </div>
</div>
