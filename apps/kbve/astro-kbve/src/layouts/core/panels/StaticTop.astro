---
import PanelCloseButton from './PanelCloseButton.astro';

---
<div class="panel-static border-b border-white/10 px-4 py-3 text-neutral-700 dark:text-neutral-300">
  <div class="flex items-center justify-between">
    <h2 class="text-sm font-semibold uppercase tracking-wide text-neutral-800 dark:text-cyan-300">
      Dashboard Overview
    </h2>
    <PanelCloseButton side="top" />
  </div>

  <div class="mt-4 grid grid-cols-2 sm:grid-cols-4 gap-4 text-sm text-center">
    <div class="bg-yellow-100/60 dark:bg-neutral-800 p-3 rounded-md">
      <p class="font-semibold text-yellow-700 dark:text-yellow-300">Servers</p>
      <p class="mt-1 text-neutral-800 dark:text-neutral-100">12 Active</p>
    </div>
    <div class="bg-cyan-100/60 dark:bg-neutral-800 p-3 rounded-md">
      <p class="font-semibold text-cyan-700 dark:text-cyan-300">Connections</p>
      <p class="mt-1 text-neutral-800 dark:text-neutral-100">342</p>
    </div>
    <div class="bg-purple-100/60 dark:bg-neutral-800 p-3 rounded-md">
      <p class="font-semibold text-purple-700 dark:text-purple-300">Memory</p>
      <p class="mt-1 text-neutral-800 dark:text-neutral-100">1.2 GB</p>
    </div>
    <div class="bg-green-100/60 dark:bg-neutral-800 p-3 rounded-md">
      <p class="font-semibold text-green-700 dark:text-green-300">CPU</p>
      <p class="mt-1 text-neutral-800 dark:text-neutral-100">24%</p>
    </div>
  </div>
</div>