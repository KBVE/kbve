---
import PanelCloseButton from './PanelCloseButton.astro';
---

<div class="panel-static border-t border-white/10 px-4 py-3 text-neutral-700 dark:text-neutral-300">
  <div class="flex items-center justify-between">
    <h2 class="text-sm font-semibold uppercase tracking-wide text-neutral-800 dark:text-cyan-300">
      Notifications
    </h2>
    <PanelCloseButton side="bottom" />
  </div>

  <!-- Toast Area -->
  <div id="toast-container" class="mt-4 space-y-2">
    <div class="bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 px-4 py-2 rounded shadow-md flex items-center justify-between">
      <span class="text-sm"> You’re connected to the cluster.</span>
    </div>

    <div class="bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 px-4 py-2 rounded shadow-md flex items-center justify-between">
      <span class="text-sm"> New update available. <a href="/changelog" class="underline hover:text-yellow-600 dark:hover:text-yellow-400">View changelog</a></span>
    </div>
  </div>

  <!-- Optional system info -->
  <div class="mt-4 text-xs text-center text-neutral-500 dark:text-neutral-400">
    App Version 1.0.0 · Updated just now · <span class="italic">kbve.com</span>
  </div>
</div>
