---
import ReactAbout from './ReactAbout';
---

<style>
  [data-animate] {
    transition: all 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }
  
  [data-animate="section"] {
    transition-delay: 0s;
  }
  
  [data-animate="badge"] {
    transition-delay: 0.1s;
  }
  
  [data-animate="title"] {
    transition-delay: 0.2s;
  }
  
  [data-animate="description"] {
    transition-delay: 0.4s;
  }
  
  [data-animate="content"] {
    transition-delay: 0.6s;
  }
  
  [data-animate="button"] {
    transition-delay: 0.8s;
  }
  
  [data-animate="panel"] {
    transition-delay: 1s;
  }
  
  [data-animate="info-section"] {
    transition-delay: 1.2s;
  }
  
  [data-animate="info-badge"] {
    transition-delay: 1.3s;
  }
  
  [data-animate="info-content"] {
    transition-delay: 1.4s;
  }
  
  [data-animate="info-title"] {
    transition-delay: 1.5s;
  }
  
  [data-animate="info-description"] {
    transition-delay: 1.6s;
  }
  
  [data-animate="info-features"] {
    transition-delay: 1.7s;
  }
  
  [data-animate="info-card"] {
    transition-delay: 1.8s;
  }
</style>

<section class="px-6 py-12 sm:px-8 lg:px-12" data-animate="section" data-animate-delay="0">
		<div
			class="mx-auto max-w-7xl relative flex flex-col md:flex-row rounded-3xl bg-white/5 backdrop-blur-md ring-1 ring-white/10
    shadow-[inset_0_0_0.5px_rgba(255,255,255,0.15),inset_0_1px_0_rgba(255,255,255,0.08),0_20px_40px_rgba(0,0,0,0.4)]
    hover:shadow-[inset_0_0_1px_rgba(255,255,255,0.2),inset_0_2px_1px_rgba(255,255,255,0.1),0_30px_60px_rgba(0,0,0,0.5)]
    transition-all duration-300 overflow-hidden ring-offset-1 ring-offset-white/5 hover:ring-4">
			<!-- Left Content -->
			<div class="p-8 flex-1 space-y-6">
				<div
					class="inline-flex items-center gap-2 text-xs font-semibold bg-cyan-500/90 text-neutral-300 px-3 py-1 rounded-full shadow border border-white/30 transition-all duration-700 transform"
					data-animate="badge"
					data-animate-delay="100">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="w-4 h-4"
						fill="currentColor"
						viewBox="0 0 24 24">
						<circle cx="12" cy="12" r="10"></circle>
					</svg>
					Learn More
				</div>

				<h2 
					class="text-3xl sm:text-4xl font-bold text-white transition-all duration-700 transform"
					data-animate="title"
					data-animate-delay="200">
					About KBVE
				</h2>
				<p 
					class="text-base text-zinc-300 transition-all duration-700 transform"
					data-animate="description"
					data-animate-delay="400">
					KBVE (KiloByte Virtual Engine) is a platform and community
					pushing the edge of automation, interactive media, and
					decentralized tools.
				</p>

				<div
					class="mt-6 border-t border-white/10 pt-6 text-base leading-relaxed text-zinc-300 transition-all duration-700 transform"
					data-animate="content"
					data-animate-delay="600">
					Join us as we build open-source projects, AI tools, and
					immersive web experiences. We're an async-first community,
					exploring tech, art, and automation.
				</div>

                                <a
                                        href="/contact"
                                        data-astro-prefetch
                                        data-animate="button"
                                        data-animate-delay="800"
                                        class="inline-block mt-6 bg-gradient-to-br from-purple-400 to-purple-500 text-white font-semibold py-2 px-6 rounded-full shadow-md text-sm tracking-wide transition-all duration-700 transform
          hover:from-purple-300 hover:to-purple-400 hover:-translate-y-1
          active:from-purple-500 active:to-purple-600 active:translate-y-0">
                                        Contact Us
                                </a>
			</div>

			<!-- Optional Right Panel: could embed a Lottie or SVG -->
			<div
				class="hidden md:block w-1/2 relative rounded-r-3xl overflow-hidden border-l border-white/10 backdrop-blur-xl transition-all duration-700 transform"
				data-animate="panel"
				data-animate-delay="1000">
				<div class="absolute inset-0 bg-purple-900/30 z-0"></div>
				<div
					class="relative z-10 flex items-center justify-center h-full text-purple-300 text-xl p-10">
					Transforming Ideas into Interactive Realities.
				</div>
			</div>
		</div>
	</section>

	<!-- Additional Information Section with Background Image -->
	<section 
		class="relative px-6 py-20 sm:px-8 lg:px-12 overflow-hidden"
		data-animate="info-section"
		data-animate-delay="1200">
		<!-- Background with animated gradient and pattern -->
		<div class="absolute inset-0 z-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900">
			<div class="absolute inset-0 opacity-30" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
			<div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 2px 2px, rgba(147, 197, 253, 0.4) 1px, transparent 0); background-size: 40px 40px;"></div>
		</div>
		
		<!-- Glass morphic overlay -->
		<div class="absolute inset-0 bg-black/40 backdrop-blur-sm z-10"></div>
		
		<!-- Content -->
		<div class="relative z-20 mx-auto max-w-6xl">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
				<!-- Left Content -->
				<div 
					class="space-y-8"
					data-animate="info-content"
					data-animate-delay="1400">
					<div class="space-y-4">
						<div 
							class="inline-flex items-center gap-2 text-xs font-semibold bg-gradient-to-r from-cyan-400/20 to-blue-400/20 text-cyan-300 px-4 py-2 rounded-full border border-cyan-400/30 backdrop-blur-sm"
							data-animate="info-badge"
							data-animate-delay="1300">
							<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/>
							</svg>
							Innovation Hub
						</div>
						
						<h3 
							class="text-4xl lg:text-5xl font-bold text-white leading-tight"
							data-animate="info-title"
							data-animate-delay="1500">
							Building the
							<span class="bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-transparent">
								Future
							</span>
						</h3>
						
						<p 
							class="text-lg text-zinc-300 leading-relaxed"
							data-animate="info-description"
							data-animate-delay="1600">
							From AI-powered automation tools to immersive gaming experiences, 
							we're crafting the next generation of digital solutions that bridge 
							creativity and technology.
						</p>
					</div>
					
					<!-- Feature List -->
					<div 
						class="space-y-4"
						data-animate="info-features"
						data-animate-delay="1700">
						<div class="flex items-center gap-4 group">
							<div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-lg flex items-center justify-center border border-purple-400/30 group-hover:border-purple-400/50 transition-colors">
								<svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
									<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
								</svg>
							</div>
							<span class="text-zinc-300 group-hover:text-white transition-colors">Open Source Development</span>
						</div>
						
						<div class="flex items-center gap-4 group">
							<div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-cyan-500/20 to-blue-500/20 rounded-lg flex items-center justify-center border border-cyan-400/30 group-hover:border-cyan-400/50 transition-colors">
								<svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
									<path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
								</svg>
							</div>
							<span class="text-zinc-300 group-hover:text-white transition-colors">Community-Driven Innovation</span>
						</div>
						
						<div class="flex items-center gap-4 group">
							<div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500/20 to-teal-500/20 rounded-lg flex items-center justify-center border border-emerald-400/30 group-hover:border-emerald-400/50 transition-colors">
								<svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
								</svg>
							</div>
							<span class="text-zinc-300 group-hover:text-white transition-colors">Cutting-Edge Technology</span>
						</div>
					</div>
				</div>
				
				<!-- Right Content - Glass Card -->
				<div 
					class="relative"
					data-animate="info-card"
					data-animate-delay="1800">
					<div class="relative rounded-2xl bg-white/10 backdrop-blur-xl border border-white/20 p-8 shadow-2xl hover:bg-white/15 transition-all duration-500 group">
						<!-- Decorative elements -->
						<div class="absolute top-4 right-4 w-20 h-20 bg-gradient-to-br from-purple-400/20 to-pink-400/20 rounded-full blur-xl group-hover:scale-110 transition-transform duration-500"></div>
						<div class="absolute bottom-4 left-4 w-16 h-16 bg-gradient-to-br from-cyan-400/20 to-blue-400/20 rounded-full blur-xl group-hover:scale-110 transition-transform duration-500"></div>
						
						<div class="relative space-y-6">
							<div class="flex items-center gap-3">
								<div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
									<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
										<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
									</svg>
								</div>
								<div>
									<h4 class="text-xl font-bold text-white">Join Our Community</h4>
									<p class="text-sm text-zinc-400">Connect with innovators worldwide</p>
								</div>
							</div>
							
							<p class="text-zinc-300 leading-relaxed">
								Be part of a growing ecosystem where developers, designers, and visionaries 
								collaborate to create tomorrow's digital experiences. From Discord discussions 
								to GitHub contributions, every voice matters.
							</p>
							
							<div class="flex flex-wrap gap-3">
								<div class="flex items-center gap-2 text-sm text-zinc-400">
									<div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
									<span>500+ Active Members</span>
								</div>
								<div class="flex items-center gap-2 text-sm text-zinc-400">
									<div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
									<span>20+ Open Projects</span>
								</div>
							</div>
							
							<a 
								href="/community" 
								class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-6 py-3 rounded-xl font-semibold hover:from-indigo-400 hover:to-purple-500 transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5">
								<span>Join Community</span>
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

    <ReactAbout client:only="react" />