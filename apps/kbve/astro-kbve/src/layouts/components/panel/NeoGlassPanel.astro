---
const {
	title = 'Ocean Tier Access',
	subtitle = 'Flow with serene access and deep-blue level features.',
	badge = 'Deep Sea Tier',
	features = [
		'Hydro-Elastic Storage',
		'Tidal Support System',
		'Abyssal Stream (4K)',
		'Aqua Analytics Flow',
		'Liquid Preview Modes',
	],
	buttonText = 'Dive In',
	buttonHref = '#',
} = Astro.props;
---

<section class="px-6 py-12 sm:px-8 lg:px-12">
	<div
		class="mx-auto max-w-7xl relative flex flex-col md:flex-row rounded-3xl bg-white/5 backdrop-blur-md ring-1 ring-white/10 shadow-[inset_0_0_0.5px_rgba(255,255,255,0.2),0_20px_40px_rgba(0,0,0,0.4)] hover:shadow-[inset_0_0_1px_rgba(255,255,255,0.3),0_30px_60px_rgba(0,0,0,0.5)] transition-all duration-300 overflow-hidden">
		<!-- Left Content Block -->
		<div class="p-8 flex-1 space-y-5">
			<!-- Badge -->
			<div
				class="inline-flex items-center gap-2 text-xs font-semibold bg-cyan-300/90 text-cyan-950 px-3 py-1 rounded-full shadow border border-white/30">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="w-4 h-4"
					fill="currentColor"
					viewBox="0 0 24 24">
					<circle cx="12" cy="12" r="10"></circle>
				</svg>
				{badge}
			</div>

			<!-- Title -->
			<h2 class="text-3xl sm:text-4xl font-bold text-white">{title}</h2>
			<p class="text-base text-zinc-300">{subtitle}</p>

			<!-- Features -->
			<ul class="mt-4 space-y-2 text-sm text-cyan-100">
				{
					features.map((feature: unknown, i: any) => (
						<li class="flex items-center gap-2">
							<svg
								class="w-4 h-4 text-cyan-300 hover:animate-spin"
								viewBox="0 0 24 24"
								fill="none"
								role="img"
								aria-label="Feature icon">
								<circle
									cx="12"
									cy="12"
									r="8"
									stroke="currentColor"
									stroke-width="2"
									stroke-dasharray="10 5"
								/>
							</svg>
							<span class="leading-tight">{feature}</span>
						</li>
					))
				}
			</ul>

			<!-- Button -->
			<a
				href={buttonHref}
				class="inline-block mt-6 bg-gradient-to-br from-cyan-400 to-cyan-500 text-white font-semibold py-2 px-6 rounded-full shadow-md text-sm tracking-wide
        hover:from-cyan-300 hover:to-cyan-400 hover:-translate-y-1
        active:from-cyan-500 active:to-cyan-600 active:translate-y-0 transition-all duration-200 ease-in-out">
				{buttonText}
			</a>
		</div>

		<!-- Right Accent -->
		<div
			class="hidden md:block w-1/3 bg-cyan-400/10 backdrop-blur-xl rounded-r-3xl border-l border-white/10 relative">
			<!-- Optional ambient SVG -->
			<svg
				class="absolute top-4 right-4 w-20 h-20 text-cyan-400/20"
				viewBox="0 0 100 100"
				fill="none">
				<circle
					cx="50"
					cy="50"
					r="45"
					stroke="currentColor"
					stroke-width="2">
				</circle>
				<circle
					cx="50"
					cy="50"
					r="35"
					stroke="currentColor"
					stroke-width="1.5">
				</circle>
			</svg>
		</div>
	</div>
</section>
