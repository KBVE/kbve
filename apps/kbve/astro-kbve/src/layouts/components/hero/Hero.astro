---
//import HeroInteractive from './HeroInteractive';
import HeroInteractive from './HeroInteractiveDice';
import HeroSVG from './HeroSVG.astro';
---


<section
	class="relative text-white py-24 px-6 sm:px-12 "
	aria-label="Hero section: Introduction to KBVE">
	<!-- Background SVG -->
			<div class="absolute -inset-x-12 -inset-y-16 transform opacity-20 pointer-events-none"
					aria-hidden="true">
				<HeroSVG />
			</div>
	<div
		class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center z-10">

		<!-- LEFT COLUMN: Text Content with Background SVG -->
		<div class="relative z-0 bg-gradient-to-b from-stone-950/70 to-zinc-800/70 p-6 rounded-2xl">
			<!-- Foreground Content -->
			<header
				class="relative space-y-6 text-center md:text-left z-10"
				aria-labelledby="hero-title">
				<h1
					id="hero-title"
					class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight">
					Welcome to <span class="text-cyan-500">KBVE</span>
				</h1>
				<p
					class="text-lg sm:text-xl text-zinc-300 max-w-xl mx-auto md:mx-0"
					aria-label="KBVE description">
					From cloud-native development to competitive gaming, we're here
					to help you level up! Whether you're containerizing apps or
					climbing ranked, our community's got your back.
				</p>
				<div class="space-y-2 text-zinc-900">
					<script
						is:inline
						src="https://cse.google.com/cse.js?cx=partner-pub-3698214103602019:ab1srxiqkuo"
						data-astro-rerun
						defer
					></script>
					<div class="gcse-searchbox" data-autoCompleteMaxCompletions="5"></div>
				</div>
			</header>
		</div>

		<!-- RIGHT COLUMN: HeroInteractive -->
		<div
			class="flex justify-center md:justify-end relative h-[300px] sm:h-[400px] md:h-[500px] mb-4 bg-gradient-to-b from-stone-950/70 to-zinc-800/70 p-6 rounded-2xl"
			id="hero-interactive-wrapper">
			<!-- Spinner shown by default -->
			<div
				id="hero-spinner"
				class="absolute inset-0 flex items-center justify-center">
				<svg
					class="h-8 w-8 animate-spin text-cyan-400"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					role="status"
					aria-label="Loading">
					<circle
						class="opacity-25"
						cx="12"
						cy="12"
						r="10"
						stroke="currentColor"
						stroke-width="4">
					</circle>
					<path
						class="opacity-75"
						fill="currentColor"
						d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z">
					</path>
				</svg>
			</div>

			<!-- React Component -->
			<HeroInteractive client:only="react" />
			
		</div>
	</div>
</section>

<!-- Bottom Gradient Strip -->
<div
	class="relative opacity-[0.01] bg-gradient-to-b from-zinc-800/50 via-zinc-900/50 to-[#0e0d0d]/50 h-16 w-full"
	aria-hidden="true">
</div>

<!-- Google Search Results -->
<div class="relative mx-auto bg-gradient-to-b from-[#0e0d0d]/50 to-stone-950/50" aria-label="Search Results From Google">
	<div class="gcse-searchresults"></div>
</div>
<script src="./heroSearch.ts"></script>
