<div class="p-4 rounded-lg text-black">
	<div class="gcse-searchbox-only"></div>
</div>

<script is:inline>

    const onSearchBoxLoad = () => {
			console.log('[CSE] SearchBox rendered â€” applying styles');

			const apply = (selector, styles) => {
				const el = document.querySelector(selector);
				if (el instanceof HTMLElement) {
					Object.assign(el.style, styles);
				}
			};

			const applyToAll = (selector, styles) => {
				const elements = document.querySelectorAll(selector);
				elements.forEach((el) => {
					if (el instanceof HTMLElement) {
						Object.assign(el.style, styles);
					}
				});
			};

			// Apply styles to make search box visible and functional
			apply('.gsc-search-box', {
				backgroundColor: '#18181b',
				borderRadius: '0.5rem',
				border: '1px solid rgba(34, 211, 238, 0.3)',
				overflow: 'hidden'
			});

			apply('.gsc-input', {
				color: '#f4f4f5',
				backgroundColor: 'transparent',
				backgroundImage: 'none',
				padding: '0.75rem 1rem',
				fontSize: '0.875rem',
				border: 'none',
				outline: 'none',
				minHeight: '2.5rem',
				width: '100%'
			});

			apply('.gsc-search-button', {
				backgroundColor: '#0891b2',
				border: 'none',
				padding: '0.5rem 0.75rem',
				minHeight: '2.5rem',
				display: 'flex',
				alignItems: 'center',
				justifyContent: 'center'
			});

			apply('.gsc-search-button:hover', {
				backgroundColor: '#0e7490'
			});

			applyToAll('.gsc-search-button svg', {
				fill: 'white',
				width: '1rem',
				height: '1rem'
			});

			// Set placeholder text
			const searchInput = document.querySelector('.gsc-input');
			if (searchInput) {
				searchInput.placeholder = 'Search...';
			}
    };

	// Wait for Google CSE to load and apply styles
	window.__gcse = {
		parsetags: 'onload',
		callback: function() {
			setTimeout(onSearchBoxLoad, 100);
		}
	};

	// Fallback check
	const checkSearchBox = setInterval(() => {
		const searchInput = document.querySelector('.gsc-input');
		if (searchInput) {
			onSearchBoxLoad();
			clearInterval(checkSearchBox);
		}
	}, 500);

	// Stop checking after 10 seconds
	setTimeout(() => clearInterval(checkSearchBox), 10000);

</script>