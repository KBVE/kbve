---
// React component for dynamic footer content
import ReactFooter from './ReactFooter.tsx';
// Social Media Links
const socialLinks = [
  {
    name: "Twitch",
    href: "https://twitch.tv/kbve",
    icon: "/assets/icons/svg/twitch.svg",
    label: "Twitch",
  },
  {
    name: "GitHub",
    href: "https://github.com/kbve",
    icon: "/assets/icons/svg/github.svg",
    label: "GitHub",
  },
  {
    name: "YouTube",
    href: "https://youtube.com/@kbve",
    icon: "/assets/icons/svg/youtube.svg",
    label: "Youtube",
  },
  {
    name: "Discord",
    href: "https://kbve.com/discord",
    icon: "/assets/icons/svg/discord.svg",
    label: "Discord",
  },
];
---

<footer
	class="mt-auto border-t border-zinc-700 bg-zinc-900/50 backdrop-blur-sm">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
			<!-- Brand Section -->
			<div class="col-span-1 sm:col-span-2 lg:col-span-2">
				<div class="flex items-center space-x-4 group mb-4">
					<div
						class="relative w-10 h-10 rounded-lg bg-cyan-400/30 backdrop-blur-md shadow-inner shadow-cyan-500/20 ring-1 ring-cyan-300/30 flex items-center justify-center group-hover:scale-105 transition-transform duration-300">
						<div
							class="absolute -inset-1 rounded-lg bg-cyan-400/20 blur-xl opacity-70 group-hover:opacity-90 transition-opacity">
						</div>
						<svg
							viewBox="0 0 76 76"
							class="w-6 h-6 z-10 text-cyan-200 drop-shadow-[0_0_4px_cyan] group-hover:animate-pulse"
							xmlns="http://www.w3.org/2000/svg"
							xmlns:xlink="http://www.w3.org/1999/xlink"
							version="1.1"
							baseProfile="full"
							enable-background="new 0 0 76.00 76.00"
							xml:space="preserve"
							fill="currentColor">
							<g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
								id="SVGRepo_tracerCarrier"
								stroke-linecap="round"
								stroke-linejoin="round">
							</g><g id="SVGRepo_iconCarrier">
								<path
									fill="#000000"
									fill-opacity="1"
									stroke-linejoin="round"
									d="M 19.3919,37.5442C 19.6211,31.4744 22.697,25.8757 28.3209,22.1759C 28.3375,22.1822 28.4831,22.1291 28.4166,22.255C 27.9707,22.668 19.9618,32.1286 27.3341,39.5966C 27.3341,39.5966 31.2074,43.3197 34.2103,39.7866C 34.2103,39.7866 37.1747,35.9499 34.173,30.134C 34.173,30.134 33.4135,28.2344 30.6765,27.057L 32.8808,24.6247C 32.8808,24.6247 34.7436,25.424 36.1859,27.5916C 36.1859,27.5916 36.2626,25.3093 34.5143,22.8771L 37.9323,19L 41.3153,22.8411C 41.3153,22.8411 39.7596,25.0452 39.645,27.6276C 39.645,27.6276 40.7072,25.8795 42.9887,24.6247L 45.1531,27.057C 45.1531,27.057 43.0717,27.7423 41.6775,30.1087C 40.4786,32.3015 39.5556,36.9906 41.7314,39.867C 41.7314,39.867 44.1662,43.3197 48.45,39.663C 48.45,39.663 56.3257,32.6062 47.6423,22.4039C 47.6423,22.4039 47.168,21.9846 47.7007,22.2127C 51.5385,25.0066 56.1339,28.6918 56.6082,37.8876C 56.4214,49.0393 48.9535,57 38.0487,57C 27.3715,57 19.0713,48.0899 19.3919,37.5442 Z ">
								</path>
							</g>
						</svg>
					</div>
					<span
						class="text-xl font-extrabold tracking-wider bg-gradient-to-r from-cyan-300 via-cyan-400 to-cyan-500 bg-clip-text text-transparent
            [text-shadow:0_0_3px_rgba(0,255,255,0.7),0_0_10px_rgba(0,255,255,0.4)]
            group-hover:animate-glow">
						KBVE
					</span>
				</div>
				<p class="text-zinc-400 text-sm max-w-md leading-relaxed">
					KiloByte Virtual Enterprises - Pioneering the digital
					frontier with innovative solutions, cutting-edge technology,
					and exceptional user experiences.
				</p>
				<div class="flex space-x-4 mt-4">
					<!-- Social Media Links -->
					{socialLinks.map(({ name, href, icon, label }) => (
						<a
						href={href}
						target="_blank"
						rel="noopener noreferrer"
						data-astro-prefetch
						aria-label={label}
						class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 group"
						>
						<span class="sr-only">{label}</span>
						<img
							src={icon}
							alt={`${name} logo`}
							aria-hidden="true"
							class="w-6 h-6 z-10 drop-shadow-[0_0_4px_cyan] group-hover:animate-pulse"
							width="24"
							height="24"
							loading="lazy"
							decoding="async"
							fetchpriority="low"
						/>
						</a>
					))}
				</div>
			</div>

			<!-- Quick Links -->
			<div class="relative">
				<h3
					class="text-cyan-300 font-semibold mb-4 text-sm uppercase tracking-wider">
					Quick Links
				</h3>
				<!-- Skeleton container for dynamic quick links -->
				<div
					id="footer-quicklinks-skeleton"
					data-skeleton="footer-quicklinks"
					class="transition-opacity duration-500">
					<ul class="space-y-3">
						<li>
							<a
								href="/dashboard/"
								data-astro-prefetch
								class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
								Dashboard
							</a>
						</li>
						<li>
							<a
								href="/project/"
								data-astro-prefetch
								class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
								Projects
							</a>
						</li>
						<li>
							<a
								href="/analysis/"
								data-astro-prefetch
								class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
								Analytics
							</a>
						</li>
						<li>
							<a
								href="/settings/"
								data-astro-prefetch
								class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
								Settings
							</a>
						</li>
						<li>
							<a
								href="/support/"
								data-astro-prefetch
								class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
								Support
							</a>
						</li>
					</ul>
				</div>
				<!-- Dynamic content will be rendered here by React - positioned as overlay after title -->
				<div
					id="footer-quicklinks-content"
					class="absolute inset-0 top-10">
				</div>
			</div>

			<!-- Resources -->
			<div>
				<h3
					class="text-cyan-300 font-semibold mb-4 text-sm uppercase tracking-wider">
					Resources
				</h3>
				<ul class="space-y-3">
					<li>
						<a
							href="/docs"
							data-astro-prefetch
							class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
							Documentation
						</a>
					</li>
					<li>
						<a
							href="/api"
							data-astro-prefetch
							class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
							API Reference
						</a>
					</li>
					<li>
						<a
							href="/community"
							target="_blank"
							rel="noopener noreferrer"
							class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm flex items-center gap-1">
							Community
							<svg
								class="w-3 h-3"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14">
								</path>
							</svg>
						</a>
					</li>
					<li>
						<a
							href="/blog"
							data-astro-prefetch
							class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
							Blog
						</a>
					</li>
					<li>
						<a
							href="/changelog"
							data-astro-prefetch
							class="text-zinc-400 hover:text-cyan-400 transition-colors duration-200 text-sm">
							Changelog
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Divider -->
		<div class="mt-8 pt-6 border-t border-zinc-700">
			<div
				class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0 gap-4">
				<!-- Copyright -->
				<div class="text-zinc-500 text-sm text-center sm:text-left">
					Â© 2025 KiloByte Virtual Enterprises. All rights reserved.
				</div>

				<!-- Legal Links -->
				<div
					class="flex flex-wrap justify-center sm:justify-end gap-x-6 gap-y-2">
					<a
						href="/legal/privacy"
						data-astro-prefetch
						class="text-zinc-500 hover:text-cyan-400 transition-colors duration-200 text-sm whitespace-nowrap">
						Privacy
					</a>
					<a
						href="/legal/tos"
						data-astro-prefetch
						class="text-zinc-500 hover:text-cyan-400 transition-colors duration-200 text-sm whitespace-nowrap">
						Terms
					</a>
					<a
						href="/legal/"
						data-astro-prefetch
						class="text-zinc-500 hover:text-cyan-400 transition-colors duration-200 text-sm whitespace-nowrap">
						Legal/EULA
					</a>
				</div>
			</div>
		</div>

		<!-- Glowing accent line -->
		<div class="mt-6 relative">
			<div
				class="absolute inset-0 h-px bg-gradient-to-r from-transparent via-cyan-400/30 to-transparent">
			</div>
			<div
				class="absolute inset-0 h-px bg-gradient-to-r from-transparent via-cyan-400/10 to-transparent blur-sm">
			</div>
		</div>
	</div>

	<!-- React Footer Component - Handles dynamic content -->
	<ReactFooter client:only="react" />
</footer>

<style>
	@keyframes glow {
		0%,
		100% {
			text-shadow:
				0 0 3px rgba(0, 255, 255, 0.7),
				0 0 10px rgba(0, 255, 255, 0.4);
		}
		50% {
			text-shadow:
				0 0 5px rgba(0, 255, 255, 0.9),
				0 0 15px rgba(0, 255, 255, 0.6),
				0 0 20px rgba(0, 255, 255, 0.3);
		}
	}

	.animate-glow {
		animation: glow 2s ease-in-out infinite;
	}
</style>
