---
import Layout from 'src/layouts/core/Layout.astro';
import DashLayout from 'src/layouts/components/dashboard/layout/DashLayout.astro';

const pageTitle: string = `Register | KBVE`;
const title: string = `Register for KBVE`;
const subTitle: string = `Create your KBVE account`;

const RegisterDescription: string =
	'Join KBVE to access exclusive features, participate in our community, and stay updated with the latest in technology and gaming. Register now to start your journey with us!';

import { Register as ReactRegister } from 'src/layouts/client/supabase/register/Register';
import RegisterSection from 'src/layouts/client/supabase/register/RegisterSection';
import OppsAuth from 'src/layouts/client/supabase/auth/OppsAuth';
---

<Layout
	title={pageTitle}
	structuredData={{
		'@context': 'https://schema.org',
		'@type': 'WebPage',
		'@id': 'https://kbve.com/register/',
		url: 'https://kbve.com/register/',
		name: `${pageTitle}`,
		description:
			'Create your KBVE account to unlock exclusive features and join our growing community of tech and gaming enthusiasts.',
		isPartOf: {
			'@type': 'WebSite',
			url: 'https://kbve.com',
			name: 'Kilo Byte Virtual Engine',
			description:
				'Elevate your efficiency with KBVE, Kilobyte Virtual Engine! Discover cutting-edge software and automation solutions designed to streamline and enhance your projects. Let’s innovate together!',
		},
		inLanguage: 'en-US',
	}}>
	<style>
		@keyframes shimmer {
			0% {
				background-position: -200% 0;
			}
			100% {
				background-position: 200% 0;
			}
		}
	</style>
	<DashLayout>
		<OppsAuth client:only="react" />
		<section class="px-6 py-8 sm:px-8 lg:px-12">
			<div
				class="mx-auto max-w-4xl rounded-2xl bg-zinc-800/90 border border-zinc-700/50 backdrop-blur-md
				shadow-[inset_0_1px_0_rgba(255,255,255,0.1),inset_0_0_20px_rgba(0,0,0,0.2),0_10px_30px_rgba(0,0,0,0.3)]
				p-8 md:p-12 relative">
				<div class="text-center mb-8">
					<h3
						class="text-3xl sm:text-4xl font-bold leading-tight text-white mb-4 bg-gradient-to-r from-cyan-300 to-purple-300 bg-clip-text text-transparent">
						Sign up for KBVE
					</h3>
					<p class="text-lg text-zinc-300 max-w-2xl mx-auto">
						{RegisterDescription}
					</p>
				</div>

				<!-- Registration Form Container -->
				<div class="relative">
					<!-- Registration Skeleton - Higher z-index -->
					<div
						class="relative z-20 max-w-md mx-auto"
						data-skeleton="register">
						<!-- OAuth Buttons Skeleton -->
						<div class="flex flex-col gap-3 mb-8">
							<div
								class="h-12 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded-xl animate-[shimmer_2s_infinite]">
							</div>
							<div
								class="h-12 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded-xl animate-[shimmer_2s_infinite]"
								style="animation-delay: 0.3s;">
							</div>
							<div
								class="h-12 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded-xl animate-[shimmer_2s_infinite]"
								style="animation-delay: 0.6s;">
							</div>
						</div>

						<!-- Divider Skeleton -->
						<div class="flex items-center my-6">
							<div
								class="flex-1 h-px bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] animate-[shimmer_2s_infinite]">
							</div>
							<div
								class="px-4 w-8 h-4 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded animate-[shimmer_2s_infinite]"
								style="animation-delay: 0.2s;">
							</div>
							<div
								class="flex-1 h-px bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] animate-[shimmer_2s_infinite]"
								style="animation-delay: 0.4s;">
							</div>
						</div>

						<!-- Form Title Skeleton -->
						<div class="text-center mb-6">
							<div
								class="h-8 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded w-48 mx-auto mb-2 animate-[shimmer_2s_infinite]">
							</div>
							<div
								class="h-4 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded w-56 mx-auto animate-[shimmer_2s_infinite]"
								style="animation-delay: 0.3s;">
							</div>
						</div>

						<!-- Form Fields Skeleton -->
						<div class="space-y-5">
							{
								Array.from({ length: 4 }).map((_, i) => (
									<div class="space-y-2">
										<div
											class="h-4 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded w-24 animate-[shimmer_2s_infinite]"
											style={`animation-delay: ${i * 0.1}s;`}
										/>
										<div
											class="h-12 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded-xl animate-[shimmer_2s_infinite]"
											style={`animation-delay: ${i * 0.15}s;`}
										/>
										{i === 0 && (
											<div
												class="h-3 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded w-48 animate-[shimmer_2s_infinite]"
												style="animation-delay: 0.4s;"
											/>
										)}
										{i === 2 && (
											<div class="space-y-2">
												<div
													class="h-16 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded-xl animate-[shimmer_2s_infinite]"
													style="animation-delay: 0.8s;"
												/>
											</div>
										)}
									</div>
								))
							}
						</div>

						<!-- Checkbox Skeleton -->
						<div class="flex items-center gap-2 my-4">
							<div
								class="w-4 h-4 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded animate-[shimmer_2s_infinite]">
							</div>
							<div
								class="h-4 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded w-40 animate-[shimmer_2s_infinite]"
								style="animation-delay: 0.2s;">
							</div>
						</div>

						<!-- Captcha Skeleton -->
						<div
							class="h-20 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded-xl mb-4 animate-[shimmer_2s_infinite]"
							style="animation-delay: 0.5s;">
						</div>

						<!-- Submit Button Skeleton -->
						<div
							class="h-12 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded-xl animate-[shimmer_2s_infinite]"
							style="animation-delay: 0.7s;">
						</div>

						<!-- Footer Link Skeleton -->
						<div
							class="h-4 bg-gradient-to-r from-zinc-700/40 via-zinc-600/60 to-zinc-700/40 bg-[length:200%_100%] rounded w-48 mx-auto mt-4 animate-[shimmer_2s_infinite]"
							style="animation-delay: 0.9s;">
						</div>
					</div>

					<!-- Dynamic Registration Form - Will overlay skeleton -->
					<div class="max-w-md mx-auto">
						<ReactRegister client:only="react" />
					</div>
				</div>
			</div>
		</section>

		<span class="flex items-center">
			<span
				class="h-px flex-1 bg-gradient-to-r from-transparent to-purple-300 dark:to-purple-600">
			</span>

			<span class="shrink-0 px-4 text-cyan-900 dark:text-cyan-400">
				♤
			</span>

			<span
				class="h-px flex-1 bg-gradient-to-l from-transparent to-purple-300 dark:to-purple-600">
			</span>
		</span>

		<section class="px-6 py-12 sm:px-8 lg:px-12" data-section="register-1">
			<div
				class="mx-auto max-w-7xl relative flex flex-col lg:flex-row rounded-3xl bg-zinc-900/90 backdrop-blur-md border border-zinc-700/50
				shadow-[inset_0_1px_0_rgba(255,255,255,0.1),inset_0_0_20px_rgba(0,0,0,0.1),0_20px_40px_rgba(0,0,0,0.3)]
				transition-all duration-300 overflow-hidden group hover:border-cyan-500/30">
				
				<div class="flex-1 p-8 lg:p-12">
					<div class="flex items-center mb-4">
						<div class="w-12 h-12 rounded-xl bg-gradient-to-r from-cyan-500 to-purple-600 flex items-center justify-center mr-4 shadow-lg">
							<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<div class="text-sm uppercase tracking-wider text-cyan-400 font-semibold">
							Powered by Innovation
						</div>
					</div>
					
					<h1
						class="text-4xl sm:text-5xl font-bold text-white mb-2 bg-gradient-to-r from-cyan-300 to-purple-300 bg-clip-text text-transparent">
						{title}
					</h1>
					<h2 class="text-xl text-zinc-300 mb-6 font-medium">
						{subTitle}
					</h2>
					<p class="mb-8 text-lg text-zinc-400 leading-relaxed">
						{RegisterDescription}
					</p>
					
					<div class="flex flex-wrap gap-4">
						<div class="flex items-center text-zinc-300 bg-zinc-800/50 px-4 py-2 rounded-lg border border-zinc-700/50">
							<div class="w-2 h-2 bg-green-400 rounded-full mr-3 animate-pulse"></div>
							<span class="text-sm">Free to join</span>
						</div>
						<div class="flex items-center text-zinc-300 bg-zinc-800/50 px-4 py-2 rounded-lg border border-zinc-700/50">
							<div class="w-2 h-2 bg-cyan-400 rounded-full mr-3 animate-pulse"></div>
							<span class="text-sm">Instant access</span>
						</div>
						<div class="flex items-center text-zinc-300 bg-zinc-800/50 px-4 py-2 rounded-lg border border-zinc-700/50">
							<div class="w-2 h-2 bg-purple-400 rounded-full mr-3 animate-pulse"></div>
							<span class="text-sm">Community driven</span>
						</div>
					</div>
				</div>
				
				<div class="lg:w-96 flex items-center justify-center p-8 lg:p-12">
					<div class="relative">
						<div class="w-64 h-64 rounded-full bg-gradient-to-r from-cyan-500/20 to-purple-600/20 flex items-center justify-center backdrop-blur-sm border border-cyan-500/30">
							<div class="w-48 h-48 rounded-full bg-gradient-to-r from-cyan-500/30 to-purple-600/30 flex items-center justify-center">
								<div class="text-6xl">🚀</div>
							</div>
						</div>
						<div class="absolute -top-4 -right-4 w-8 h-8 rounded-full bg-cyan-400 animate-bounce"></div>
						<div class="absolute -bottom-4 -left-4 w-6 h-6 rounded-full bg-purple-400 animate-bounce" style="animation-delay: 0.5s;"></div>
						<div class="absolute top-1/2 -left-8 w-4 h-4 rounded-full bg-green-400 animate-pulse"></div>
					</div>
				</div>
				
				<div class="absolute inset-0 bg-gradient-to-r from-cyan-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
			</div>
		</section>

		<section class="px-6 py-8 sm:px-8 lg:px-12" data-section="register-2">
			<div
				class="mx-auto max-w-4xl rounded-2xl bg-zinc-800/90 backdrop-blur-md border border-zinc-700/50
				shadow-[inset_0_1px_0_rgba(255,255,255,0.1),inset_0_0_15px_rgba(0,0,0,0.2),0_8px_25px_rgba(0,0,0,0.3)]
				p-8 hover:border-cyan-500/30 transition-all duration-300 group">
				
				<div class="text-center mb-8">
					<div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-r from-cyan-500 to-purple-600 mb-4 shadow-lg">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
						</svg>
					</div>
					<h3
						class="text-2xl sm:text-3xl font-bold mb-4 text-white bg-gradient-to-r from-cyan-300 to-purple-300 bg-clip-text text-transparent">
						Why Join KBVE?
					</h3>
					<p class="text-lg text-zinc-400 max-w-2xl mx-auto">
						Unlock exclusive features and join a thriving community of innovators
					</p>
				</div>
				
				<div class="grid md:grid-cols-2 gap-6">
					<div class="flex items-start space-x-4 p-4 rounded-xl bg-zinc-900/50 border border-zinc-700/30 hover:border-cyan-500/30 transition-all duration-300 hover:bg-zinc-900/70">
						<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gradient-to-r from-cyan-500 to-blue-600 flex items-center justify-center shadow-md">
							<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
							</svg>
						</div>
						<div>
							<h4 class="text-white font-semibold mb-2">Exclusive Access</h4>
							<p class="text-zinc-300">Access exclusive community features, beta products, and member-only events</p>
						</div>
					</div>
					
					<div class="flex items-start space-x-4 p-4 rounded-xl bg-zinc-900/50 border border-zinc-700/30 hover:border-purple-500/30 transition-all duration-300 hover:bg-zinc-900/70">
						<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gradient-to-r from-purple-500 to-pink-600 flex items-center justify-center shadow-md">
							<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
							</svg>
						</div>
						<div>
							<h4 class="text-white font-semibold mb-2">Game Jams & Events</h4>
							<p class="text-zinc-300">Participate in exciting game jams, hackathons, beta tests, and exclusive giveaways</p>
						</div>
					</div>
					
					<div class="flex items-start space-x-4 p-4 rounded-xl bg-zinc-900/50 border border-zinc-700/30 hover:border-green-500/30 transition-all duration-300 hover:bg-zinc-900/70">
						<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gradient-to-r from-green-500 to-emerald-600 flex items-center justify-center shadow-md">
							<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<div>
							<h4 class="text-white font-semibold mb-2">Early Access</h4>
							<p class="text-zinc-300">Get first access to new products, features, and updates before public release</p>
						</div>
					</div>
					
					<div class="flex items-start space-x-4 p-4 rounded-xl bg-zinc-900/50 border border-zinc-700/30 hover:border-orange-500/30 transition-all duration-300 hover:bg-zinc-900/70">
						<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gradient-to-r from-orange-500 to-red-600 flex items-center justify-center shadow-md">
							<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
							</svg>
						</div>
						<div>
							<h4 class="text-white font-semibold mb-2">Community Network</h4>
							<p class="text-zinc-300">Connect with like-minded tech enthusiasts, gamers, and creative professionals</p>
						</div>
					</div>
				</div>
				
				<div class="absolute inset-0 bg-gradient-to-r from-cyan-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
			</div>
		</section>

		<section class="px-6 py-8 sm:px-8 lg:px-12" data-section="register-3">
			<div
				class="mx-auto max-w-4xl rounded-2xl bg-zinc-800/90 backdrop-blur border border-zinc-600/40
				shadow-[inset_0_1px_0_rgba(255,255,255,0.1),inset_0_0_15px_rgba(0,0,0,0.15),0_8px_25px_rgba(0,0,0,0.2)]
				p-8 hover:border-cyan-500/30 transition-all duration-300 group">
				
				<div class="text-center mb-8">
					<div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-r from-blue-500 to-cyan-600 mb-4 shadow-lg">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
					</div>
					<h3 class="text-2xl sm:text-3xl font-bold mb-4 text-cyan-300">
						Need Help?
					</h3>
					<p class="text-lg text-zinc-400 max-w-2xl mx-auto">
						We're here to support you every step of the way
					</p>
				</div>
				
				<div class="grid md:grid-cols-3 gap-6">
                                        <a href="https://kbve.com/reset/" data-astro-prefetch
                                                class="group/card flex flex-col items-center p-6 rounded-xl bg-zinc-900/50 border border-zinc-700/30 hover:border-red-500/50 transition-all duration-300 hover:bg-zinc-900/70 hover:scale-105">
						<div class="w-12 h-12 rounded-lg bg-gradient-to-r from-red-500 to-pink-600 flex items-center justify-center mb-4 shadow-md group-hover/card:scale-110 transition-transform duration-300">
							<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
							</svg>
						</div>
						<h4 class="text-white font-semibold mb-2 text-center">Password Reset</h4>
						<p class="text-zinc-300 text-sm text-center">Forgot your password? Reset it quickly and securely</p>
						<div class="mt-3 text-red-400 text-sm font-medium opacity-0 group-hover/card:opacity-100 transition-opacity duration-300">
							Reset Now →
						</div>
					</a>
					
                                        <a href="https://kbve.com/support/" data-astro-prefetch
                                                class="group/card flex flex-col items-center p-6 rounded-xl bg-zinc-900/50 border border-zinc-700/30 hover:border-blue-500/50 transition-all duration-300 hover:bg-zinc-900/70 hover:scale-105">
						<div class="w-12 h-12 rounded-lg bg-gradient-to-r from-blue-500 to-cyan-600 flex items-center justify-center mb-4 shadow-md group-hover/card:scale-110 transition-transform duration-300">
							<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 109.75 9.75A9.75 9.75 0 0012 2.25zm-4.5 9.75a4.5 4.5 0 009 0 4.5 4.5 0 00-9 0z"></path>
							</svg>
						</div>
						<h4 class="text-white font-semibold mb-2 text-center">Support Center</h4>
						<p class="text-zinc-300 text-sm text-center">Get help with questions and technical support</p>
						<div class="mt-3 text-blue-400 text-sm font-medium opacity-0 group-hover/card:opacity-100 transition-opacity duration-300">
							Get Help →
						</div>
