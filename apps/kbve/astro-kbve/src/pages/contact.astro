          linkURL="#"
          isArrowVisible={true}
        >
          <Icon name="chatBubble" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Visit our metaverse office"
          content="KBVE @ RentEarth.com"
          isAddressVisible={true}
