---
import Layout from 'src/layouts/core/Layout.astro';
const pageTitle: string = `Contact | KBVE`;

// Define the variables that will be used in this component
const title: string = "Contact us";
const subTitle: string =
  "Have questions or want to discuss a project? Reach out, and let's craft the perfect solution with our tools and services.";
const formTitle: string = "Fill in the form below";
const formSubTitle: string = "We'll get back to you in 1-2 business days.";

---
<Layout
title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://kbve.com/contact",
    "url": "https://kbve.com/contact",
    "name": "Contact Us | KBVE",
    "description":
    "Explore our software and automation solutions! Contact us to discuss your project and let us help you create the perfect automated tools and provide expert software support.",    "isPartOf": {
      "@type": "WebSite",
      "url": "https://kbve.com",
      "name": "Kilo Byte Virtual Engine",
      "description":
      "Elevate your efficiency with KBVE, Kilobyte Virtual Engine! Discover cutting-edge software and automation solutions designed to streamline and enhance your projects. Letâ€™s innovate together!",
    },
    "inLanguage": "en-US"
  }}
  >

  <section class="px-6 py-12 sm:px-8 lg:px-12">
  <div
    class="mx-auto max-w-7xl relative flex flex-col md:flex-row rounded-3xl bg-white/5 backdrop-blur-md ring-1 ring-white/10
    shadow-[inset_0_0_0.5px_rgba(255,255,255,0.15),inset_0_1px_0_rgba(255,255,255,0.08),0_20px_40px_rgba(0,0,0,0.4)]
    hover:shadow-[0_0_0_3px_rgba(103,232,249,0.6),0_0_35px_12px_rgba(192,132,252,0.35)]
    transition-all duration-300 overflow-hidden ring-offset-1 ring-offset-white/5">
    
    <!-- Left Block: Contact Form -->
    <div class="w-full md:w-1/2 flex flex-col justify-center p-8 space-y-6">
      <div class="inline-flex items-center gap-2 text-xs font-semibold bg-purple-300/20 text-purple-500 px-3 py-1 rounded-full shadow border border-white/30">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" /></svg>
        Let's Connect
      </div>

      <h2 class="text-3xl sm:text-4xl font-bold text-white">{title}</h2>
      <p class="text-base text-zinc-300">{subTitle}</p>

      <div class="mt-6 border-t border-white/10 pt-6 text-base leading-relaxed text-zinc-300">
        {formTitle}
      </div>

      <form class="space-y-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- <TextInput id="hs-firstname-contacts" label="First Name" name="hs-firstname-contacts" />
