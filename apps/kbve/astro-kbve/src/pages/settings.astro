---
import Layout from 'src/layouts/core/Layout.astro';
import UserSettings from 'src/layouts/client/supabase/profile/settings/UserSettings';
import MembersOnly from 'src/layouts/client/supabase/auth/MembersOnly';

const pageTitle: string = `Settings | KBVE`;
const title: string = `Account Settings`;
const subTitle: string = `Manage your KBVE account preferences and security`;
---

<Layout title={pageTitle}>
  <section class="px-6 pt-12 sm:px-8 lg:px-12">
    <MembersOnly client:only="react" />
    <div class="mx-auto max-w-4xl">
      <div class="mb-8">
        <h1 class="text-4xl sm:text-5xl font-bold text-neutral-900 dark:text-white mb-2 drop-shadow-lg">{title}</h1>
        <h2 class="text-xl text-neutral-700 dark:text-zinc-200 mb-4 font-medium">{subTitle}</h2>
      </div>
      <UserSettings client:only="react" />
    </div>
  </section>
  <div class="h-12 md:h-20 lg:h-24"></div> <!-- Spacer -->
</Layout>
