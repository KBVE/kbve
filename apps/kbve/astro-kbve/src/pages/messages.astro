---
import Layout from 'src/layouts/core/Layout.astro';
import Supabase from 'src/layouts/core/Supabase.astro';
import { SendMessage } from 'src/layouts/client/supabase/messages/SendMessage';
import { Mailbox } from 'src/layouts/client/supabase/messages/Mailbox';
import MembersOnly from 'src/layouts/client/supabase/auth/MembersOnly';
import DashLayout from 'src/layouts/components/dashboard/layout/DashLayout.astro';

---

<Layout title="Inbox & Notifications">
  <DashLayout>
  <Supabase />
  <MembersOnly client:only="react" />
  <section class="w-full min-h-[80vh] flex flex-row gap-0 bg-gradient-to-br from-cyan-50/60 to-purple-50/40 dark:from-cyan-950/40 dark:to-purple-950/20 rounded-3xl shadow-2xl overflow-hidden">
    <!-- Sidebar Navigation (future: add nav, filters, etc) -->
    <aside class="hidden md:flex flex-col w-1/6 min-w-[90px] max-w-[120px] bg-white/80 dark:bg-neutral-900/80 border-r border-cyan-100 dark:border-cyan-900 py-8 px-2 items-center gap-4">
      <div class="w-14 h-14 rounded-2xl bg-cyan-600 flex items-center justify-center text-white text-2xl font-bold mb-8 shadow-lg">
        <span>✉️</span>
      </div>
      <!-- Future: nav links, filters, etc -->
    </aside>
    <!-- Main Content -->
    <main class="flex-1 flex flex-col md:flex-row gap-0">
      <!-- Mailbox (left/main) -->
      <section class="w-full md:w-2/3 flex flex-col border-r border-cyan-100 dark:border-cyan-900 bg-white/70 dark:bg-neutral-900/70 backdrop-blur-xl">
        <div class="flex flex-col h-full p-6">
          <h1 class="text-3xl font-extrabold text-cyan-700 dark:text-cyan-300 mb-4">Inbox</h1>
          <Mailbox client:only="react" />
        </div>
      </section>
      <!-- Send Message (right) -->
      <section class="w-full md:w-1/3 flex flex-col bg-white/80 dark:bg-neutral-900/80 p-6 items-center justify-start">
        <h2 class="text-xl font-bold text-cyan-700 dark:text-cyan-300 mb-4">Send a Message</h2>
        <SendMessage client:only="react" />
      </section>
    </main>
  </section>
  </DashLayout>
</Layout>