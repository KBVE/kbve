---
import Layout from 'src/layouts/core/Layout.astro';

const pageTitle: string = `Register | KBVE`;
const title: string = `Register for KBVE`;
const subTitle: string = `Create your KBVE account`;

const RegisterDescription: string =
	'Join KBVE to access exclusive features, participate in our community, and stay updated with the latest in technology and gaming. Register now to start your journey with us!';

import { Register } from 'src/layouts/client/supabase/register/Register';
---

<Layout
	title={pageTitle}
	structuredData={{
		'@context': 'https://schema.org',
		'@type': 'WebPage',
		'@id': 'https://kbve.com/register/',
		url: 'https://kbve.com/register/',
		name: `${pageTitle}`,
		description:
			'Create your KBVE account to unlock exclusive features and join our growing community of tech and gaming enthusiasts.',
		isPartOf: {
			'@type': 'WebSite',
			url: 'https://kbve.com',
			name: 'Kilo Byte Virtual Engine',
			description:
				'Elevate your efficiency with KBVE, Kilobyte Virtual Engine! Discover cutting-edge software and automation solutions designed to streamline and enhance your projects. Letâ€™s innovate together!',
		},
		inLanguage: 'en-US',
	}}>
	<section class="px-6 py-12 sm:px-8 lg:px-12">
		<div
			class="mx-auto max-w-7xl relative flex flex-col md:flex-row rounded-3xl bg-neutral-100 dark:bg-neutral-900 backdrop-blur-md ring-1 ring-neutral-300/30
    shadow-[inset_0_0_0.5px_rgba(120,120,120,0.10),inset_0_1px_0_rgba(120,120,120,0.08),0_20px_40px_rgba(0,0,0,0.04)]
    hover:shadow-[0_0_0_3px_rgba(120,120,120,0.10),0_0_35px_12px_rgba(120,120,120,0.10)]
    transition-all duration-300 overflow-hidden ring-offset-1 ring-offset-neutral-200/10 hover:ring-2">
			<div class="flex-1 p-8">
				<h1
					class="text-4xl sm:text-5xl font-bold text-neutral-900 dark:text-white mb-2 drop-shadow-lg">
					{title}
				</h1>
				<h2
					class="text-xl text-neutral-700 dark:text-zinc-200 mb-4 font-medium">
					{subTitle}
				</h2>
				<p class="mb-6 text-lg text-neutral-700 dark:text-zinc-300">
					{RegisterDescription}
				</p>
			</div>
		</div>
	</section>

	<span class="flex items-center">
		<span
			class="h-px flex-1 bg-gradient-to-r from-transparent to-gray-300 dark:to-gray-600">
		</span>

		<span class="shrink-0 px-4 text-gray-900 dark:text-white">
			Register Below ;)
		</span>

		<span
			class="h-px flex-1 bg-gradient-to-l from-transparent to-gray-300 dark:to-gray-600">
		</span>
	</span>

	<section class="px-6 py-8 sm:px-8 lg:px-12">
		<div
			class="mx-auto max-w-lg rounded-2xl bg-gradient-to-br from-cyan-200/80 to-purple-200/80 dark:from-cyan-900/80 dark:to-purple-900/80 backdrop-blur-md ring-1 ring-cyan-400/30 shadow-lg p-8">
			<h3
				class="text-2xl font-semibold mb-4 text-center text-cyan-900 dark:text-cyan-200 drop-shadow">
				Sign Up
			</h3>
			<Register client:only="react" />
		</div>
	</section>

	<section class="px-6 py-8 sm:px-8 lg:px-12">
		<div
			class="mx-auto max-w-4xl rounded-2xl bg-neutral-100 dark:bg-neutral-900 backdrop-blur-md ring-1 ring-neutral-300/30 shadow p-8">
			<h3
				class="text-xl font-semibold mb-2 text-neutral-900 dark:text-white drop-shadow">
				Why join KBVE?
			</h3>
			<ul
				class="list-disc pl-6 space-y-2 text-lg text-neutral-700 dark:text-zinc-200">
				<li>Access exclusive community features and events</li>
				<li>Participate in game jams, beta tests, and giveaways</li>
				<li>Get early access to new products and updates</li>
				<li>Connect with tech and gaming enthusiasts</li>
			</ul>
		</div>
	</section>

	<section class="px-6 py-8 sm:px-8 lg:px-12">
		<div
			class="mx-auto max-w-4xl rounded-2xl bg-neutral-50 dark:bg-neutral-800 backdrop-blur ring-1 ring-neutral-200/20 shadow p-8">
			<h3
				class="text-xl font-semibold mb-2 text-neutral-900 dark:text-cyan-200 drop-shadow">
				Need Help?
			</h3>
			<ul
				class="list-disc pl-6 space-y-2 text-lg text-neutral-700 dark:text-zinc-200">
				<li>
					Forgot your password? <a
						href="https://kbve.com/reset/"
						class="text-cyan-600 dark:text-cyan-400 underline">
						Reset it here
					</a>.
				</li>
				<li>
					Questions? Visit our <a
						href="https://kbve.com/support/"
						class="text-cyan-600 dark:text-cyan-400 underline">
						Support Center
					</a>.
				</li>
				<li>
					Read our <a
						href="https://kbve.com/legal/"
						class="text-cyan-600 dark:text-cyan-400 underline">
						legal terms
					</a> before registering.
				</li>
			</ul>
		</div>
	</section>
</Layout>
