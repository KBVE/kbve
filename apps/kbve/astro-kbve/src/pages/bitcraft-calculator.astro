---
// Example usage of BitcraftCalculator component in an Astro page
import Layout from 'src/layouts/core/Layout.astro';
import BitcraftCalculator from '../components/BitcraftCalculator.astro';
---

<Layout title="Bitcraft Calculator">
  <main>
    <div class="container mx-auto py-8">
      <h1 class="text-4xl font-bold text-center mb-8">
        Bitcraft Profession Calculator
      </h1>
      
      <p class="text-center text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
        Calculate effort, time, and progress for your Bitcraft professions. 
        Track your progress across all professions with persistent state management.
      </p>
      
      <!-- The React component with client-side hydration -->
      <BitcraftCalculator className="mb-8" />
      
      <div class="mt-12 text-center">
        <h2 class="text-2xl font-semibold mb-4">Features</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold mb-2">Real-time Calculations</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Instant progress and time estimates as you adjust settings
            </p>
          </div>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold mb-2">Persistent State</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Your progress is saved automatically across sessions
            </p>
          </div>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold mb-2">All Professions</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Support for all 12 Bitcraft professions with preset values
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
