---
import Layout from 'src/layouts/core/Layout.astro';
import Supabase from 'src/layouts/core/Supabase.astro';
import { OsrsApp } from 'src/layouts/client/osrs/OsrsApp';
import MembersOnly from 'src/layouts/client/supabase/auth/MembersOnly';
---

<Layout title="OSRS Dashboard | Old School RuneScape Management">
  <Supabase />
  <MembersOnly client:only="react" />
  
  <section class="w-full min-h-[80vh] flex flex-col gap-0 bg-gradient-to-br from-orange-50/60 to-red-50/40 dark:from-orange-950/40 dark:to-red-950/20 rounded-3xl shadow-2xl overflow-hidden">
    <!-- Header Section -->
    <header class="bg-white/80 dark:bg-neutral-900/80 border-b border-orange-100 dark:border-orange-900 py-6 px-8">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-orange-600 to-red-600 flex items-center justify-center text-white text-3xl font-bold shadow-lg">
          <span>⚔️</span>
        </div>
        <div>
          <h1 class="text-3xl font-extrabold text-orange-700 dark:text-orange-300">
            OSRS Dashboard
          </h1>
          <p class="text-orange-600 dark:text-orange-400 text-sm">
            Manage your Old School RuneScape accounts
          </p>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 bg-white/70 dark:bg-neutral-900/70 backdrop-blur-xl">
      <div class="h-full p-8">
        <OsrsApp client:only="react" />
      </div>
    </main>
  </section>
</Layout>
