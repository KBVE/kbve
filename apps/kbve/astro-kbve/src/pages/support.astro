---
import Layout from 'src/layouts/core/Layout.astro';

const pageTitle: string = `Support | KBVE`;

const supportOptions = [
  {
    href: '/discord',
    icon: '💬',
    title: 'Join our Discord',
    desc: 'Chat with the community for quick help and updates.'
  },
  {
    href: 'mailto:support@kbve.com',
    icon: '📧',
    title: 'Email Us',
    desc: 'Send us a message and our team will get back to you.'
  },
  {
    href: '/docs',
    icon: '📚',
    title: 'Knowledge Base',
    desc: 'Browse guides and tutorials written by our team.'
  },
  {
    href: 'https://github.com/KBVE/kbve/issues',
    icon: '🐛',
    title: 'GitHub Issues',
    desc: 'Report bugs or request features directly on GitHub.'
  }
] as const;
---

<Layout title={pageTitle}>
  <section class="px-6 py-12 sm:px-8 lg:px-12">
    <div class="mx-auto max-w-7xl space-y-12">
      <div class="text-center space-y-3">
        <h1 class="text-4xl sm:text-5xl font-bold text-white">Support</h1>
        <p class="text-lg text-zinc-300">Need help with KBVE products or services? We're here for you.</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {supportOptions.map((opt) => (
          <a
            href={opt.href}
            class="group relative rounded-3xl p-6 bg-white/5 backdrop-blur-md ring-1 ring-white/10 ring-offset-1 ring-offset-white/5 shadow-[inset_0_0_0.5px_rgba(255,255,255,0.15),0_20px_40px_rgba(0,0,0,0.4)] hover:shadow-[0_0_0_3px_rgba(103,232,249,0.6),0_0_35px_12px_rgba(192,132,252,0.35)] transition-all duration-300">
            <div class="absolute inset-[8px] rounded-2xl pointer-events-none border border-white/10 group-hover:border-cyan-400"></div>
            <div class="relative space-y-4 z-10">
              <div class="text-3xl">{opt.icon}</div>
              <h3 class="text-xl font-semibold text-white">{opt.title}</h3>
              <p class="text-sm text-zinc-300">{opt.desc}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
