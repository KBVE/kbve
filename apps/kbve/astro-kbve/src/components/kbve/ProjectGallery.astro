<style>
	/* Scoped styles for ProjectGallery - all styles prefixed with #project-gallery */
	#project-gallery {
		--pg-color-background: var(--sl-color-bg-accent, #164e63);
		--pg-color-text: var(--sl-color-text-accent, #22d3ee);
		--pg-color-border: var(--sl-color-border, #155e75);
	}

	#project-gallery *,
	#project-gallery *::before,
	#project-gallery *::after {
		box-sizing: border-box;
	}

	#project-gallery h2 {
		font-size: 1.5rem;
		line-height: 1.2;
		text-transform: uppercase;
		font-weight: 800;
		margin: 0;
	}

	#project-gallery h3 {
		font-size: 0.6rem;
		font-weight: 400;
		margin: 0;
	}

	#project-gallery img {
		display: block;
		width: 100%;
		height: auto;
	}

	#project-gallery .pg-border-outer,
	#project-gallery .pg-border-inner {
		clip-path: polygon(
			/* left, top edge */ var(--pg-corner-size) 0%,
			/* right, top edge */ calc(100% - var(--pg-corner-size)) 0%,
			/* right edge, top */ 100% var(--pg-corner-size),
			/* right edge, bottom */ 100% calc(100% - var(--pg-corner-size)),
			/* right, bottom edge */ calc(100% - var(--pg-corner-size)) 100%,
			/* left, bottom edge */ var(--pg-corner-size) 100%,
			/* left edge, bottom */ 0% calc(100% - var(--pg-corner-size)),
			/* left edge, top */ 0% var(--pg-corner-size)
		);
	}

	#project-gallery .pg-border-outer {
		background: var(--pg-color-border);
		padding: var(--pg-border-width);
		display: flex;
		flex-direction: column;
	}

	#project-gallery .pg-border-inner {
		flex-grow: 1;
		background: var(--pg-color-background);
	}

	#project-gallery .pg-cards {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-wrap: wrap;
		gap: 1rem;
		padding: 1rem 0;
		font-family: monospace;
		line-height: 1.5;
		color: var(--pg-color-text);
	}

	#project-gallery .pg-card {
		--pg-corner-size: 1.75rem;
		--pg-border-width: 1px;
		--pg-image-column-width: 8rem;
		--pg-content-width: 19rem;
		display: grid;
		position: relative;
		grid-template-columns: var(--pg-image-column-width) calc(
				2 * var(--pg-corner-size)
			);
		transition: grid-template-columns 450ms ease 50ms;
		height: 28rem;
		overflow: clip;
		cursor: pointer;
	}

	#project-gallery .pg-card > input {
		position: absolute;
		opacity: 0;
		pointer-events: none;
	}

	#project-gallery .pg-card > *:not(input) {
		min-width: 0;
		grid-row: 1;
	}

	#project-gallery .pg-card-background {
		grid-column: 1 / -1;
	}

	#project-gallery .pg-card-background .pg-border-inner {
		position: relative;
	}

	#project-gallery .pg-card-background img {
		height: 100%;
		object-fit: cover;
		width: calc(var(--pg-image-column-width) + var(--pg-corner-size));
	}

	/* Cyberpunk scanline effect */
	@keyframes pg-scanline-fast {
		0% {
			transform: translateY(-150%);
		}
		100% {
			transform: translateY(150%);
		}
	}

	@keyframes pg-scanline-slow {
		0% {
			transform: translateY(-200%);
		}
		100% {
			transform: translateY(150%);
		}
	}

	#project-gallery .pg-scanlines {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		pointer-events: none;
		overflow: hidden;
		opacity: 1;
		transition: opacity 0.3s ease;
	}

	/* Fine static scanlines */
	#project-gallery .pg-scanlines::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: repeating-linear-gradient(
			0deg,
			transparent,
			transparent 2px,
			rgba(0, 255, 255, 0.03) 2px,
			rgba(0, 255, 255, 0.03) 4px
		);
	}

	/* Fast thin sweep */
	#project-gallery .pg-scanlines::after {
		content: '';
		position: absolute;
		top: -50%;
		left: 0;
		right: 0;
		height: 100%;
		background: linear-gradient(
			180deg,
			transparent 0%,
			rgba(0, 255, 255, 0.08) 50%,
			transparent 100%
		);
		animation: pg-scanline-fast 2.5s linear infinite;
	}

	/* Heavy slow scanline bar - using a separate element */
	#project-gallery .pg-scanlines-heavy {
		position: absolute;
		top: -100%;
		left: 0;
		right: 0;
		height: 8px;
		background: linear-gradient(
			180deg,
			transparent 0%,
			rgba(0, 255, 255, 0.25) 30%,
			rgba(0, 255, 255, 0.4) 50%,
			rgba(0, 255, 255, 0.25) 70%,
			transparent 100%
		);
		box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
		animation: pg-scanline-slow 6s linear infinite;
		pointer-events: none;
	}

	#project-gallery .pg-card:hover .pg-scanlines,
	#project-gallery .pg-card:hover .pg-scanlines-heavy {
		opacity: 0;
	}

	#project-gallery .pg-card-content {
		grid-column: 2;
		position: relative;
	}

	#project-gallery .pg-card-content-layout {
		display: flex;
		gap: 2rem;
		position: absolute;
		top: var(--pg-corner-size);
		left: var(--pg-corner-size);
		height: calc(100% - 6rem);
		width: var(--pg-content-width);
		translate: -1rem 0;
		transition: translate 450ms;
	}

	#project-gallery .pg-card-copy {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	#project-gallery h2.pg-vertical-title {
		writing-mode: vertical-lr;
	}

	#project-gallery .pg-toggle {
		position: absolute;
		bottom: 0;
		left: 0;
		padding: 1rem;
	}

	#project-gallery .pg-toggle svg {
		transition: rotate 250ms;
	}

	#project-gallery .pg-card:has(input:checked) {
		grid-template-columns: var(--pg-image-column-width) var(
				--pg-content-width
			);
	}

	#project-gallery .pg-card:has(input:checked) .pg-card-content-layout {
		translate: -4rem 0;
	}

	#project-gallery .pg-card:has(input:checked) .pg-toggle svg {
		rotate: 45deg;
	}
</style>
