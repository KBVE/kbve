<style>
	#discord-rules {
		--rule-bg: var(--sl-color-bg, #0d1117);
		--rule-bg-accent: var(--sl-color-bg-accent, #164e63);
		--rule-text: var(--sl-color-text, #e6edf3);
		--rule-text-muted: var(--sl-color-gray-3, #8b949e);
		--rule-border: var(--sl-color-hairline, #30363d);
		--rule-accent: var(--sl-color-accent, #5865f2);
		--rule-accent-high: var(--sl-color-accent-high, #7289da);
		--discord-blurple: #5865f2;
		--octagon-cut: 1rem;
	}

	#discord-rules {
		background: transparent;
		padding: 4rem 1rem;
	}

	.rules-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	/* Header */
	.rules-header {
		text-align: center;
		margin-bottom: 3rem;
		position: relative;
	}

	.header-accent {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 300px;
		height: 300px;
		background: radial-gradient(
			circle,
			var(--discord-blurple) 0%,
			transparent 70%
		);
		opacity: 0.1;
		filter: blur(60px);
		pointer-events: none;
	}

	.header-content {
		position: relative;
		z-index: 1;
	}

	.discord-icon {
		width: 4rem;
		height: 4rem;
		margin: 0 auto 1.5rem;
		padding: 1rem;
		background: linear-gradient(
			135deg,
			var(--discord-blurple) 0%,
			var(--rule-accent-high) 100%
		);
		border-radius: 1rem;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 0 40px rgba(88, 101, 242, 0.3);
	}

	.discord-icon svg {
		width: 2rem;
		height: 2rem;
		color: white;
	}

	.rules-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--rule-text);
		margin: 0 0 0.75rem;
		letter-spacing: -0.02em;
	}

	.rules-subtitle {
		font-size: 1.125rem;
		color: var(--rule-text-muted);
		margin: 0;
	}

	/* Rules Grid */
	.rules-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 1.25rem;
	}

	/* Rule Card */
	.rule-card {
		position: relative;
		padding: 1.5rem;
		background: linear-gradient(
			135deg,
			rgba(88, 101, 242, 0.08) 0%,
			transparent 100%
		);
		box-shadow: inset 0 0 0 1px var(--rule-border);
		display: grid;
		grid-template-columns: auto 1fr;
		grid-template-rows: auto 1fr;
		gap: 0.75rem 1rem;
		opacity: 0;
		transform: translateY(20px);
		animation: fadeInUp 0.5s ease forwards;
		animation-delay: calc(var(--index) * 0.05s);
		transition:
			clip-path 0.5s cubic-bezier(0.4, 0, 0.2, 1),
			box-shadow 0.5s cubic-bezier(0.4, 0, 0.2, 1),
			transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
		clip-path: polygon(
			0% 0%,
			100% 0%,
			100% 0%,
			100% 100%,
			100% 100%,
			0% 100%,
			0% 100%,
			0% 0%
		);
		overflow: hidden;
	}

	.rule-card:hover {
		clip-path: polygon(
			var(--octagon-cut) 0%,
			calc(100% - var(--octagon-cut)) 0%,
			100% var(--octagon-cut),
			100% calc(100% - var(--octagon-cut)),
			calc(100% - var(--octagon-cut)) 100%,
			var(--octagon-cut) 100%,
			0% calc(100% - var(--octagon-cut)),
			0% var(--octagon-cut)
		);
		box-shadow:
			inset 0 0 0 1px var(--discord-blurple),
			0 0 30px rgba(88, 101, 242, 0.15);
		transform: translateY(-4px);
	}

	@keyframes fadeInUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.rule-glow {
		position: absolute;
		inset: 0;
		background: linear-gradient(
			135deg,
			var(--discord-blurple) 0%,
			transparent 60%
		);
		opacity: 0;
		transition: opacity 0.5s ease;
		pointer-events: none;
		z-index: 0;
	}

	.rule-card:hover .rule-glow {
		opacity: 0.08;
	}

	/* Rule Number */
	.rule-number {
		grid-row: 1;
		grid-column: 1;
		font-size: 0.75rem;
		font-weight: 700;
		font-family: monospace;
		color: var(--discord-blurple);
		background: rgba(88, 101, 242, 0.15);
		padding: 0.25rem 0.5rem;
		border-radius: 0.25rem;
		width: fit-content;
		height: fit-content;
		position: relative;
		z-index: 1;
	}

	/* Rule Icon */
	.rule-icon {
		grid-row: 2;
		grid-column: 1;
		width: 2.5rem;
		height: 2.5rem;
		display: flex;
		align-items: flex-start;
		justify-content: center;
		position: relative;
		z-index: 1;
	}

	.rule-icon svg {
		width: 1.5rem;
		height: 1.5rem;
		color: var(--rule-accent-high);
		transition: transform 0.3s ease;
	}

	.rule-card:hover .rule-icon svg {
		transform: scale(1.1);
	}

	/* Rule Content */
	.rule-content {
		grid-row: 1 / -1;
		grid-column: 2;
		position: relative;
		z-index: 1;
	}

	.rule-title {
		font-size: 1rem;
		font-weight: 600;
		color: var(--rule-text);
		margin: 0 0 0.5rem;
		line-height: 1.3;
	}

	.rule-description {
		font-size: 0.875rem;
		color: var(--rule-text-muted);
		margin: 0;
		line-height: 1.6;
	}

	/* Footer */
	.rules-footer {
		margin-top: 3rem;
		text-align: center;
	}

	.footer-line {
		width: 100px;
		height: 2px;
		background: linear-gradient(
			90deg,
			transparent,
			var(--discord-blurple),
			transparent
		);
		margin: 0 auto 1.5rem;
	}

	.copyright {
		font-size: 0.875rem;
		color: var(--rule-text-muted);
		margin: 0 0 1rem;
	}

	.tos-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.875rem;
		color: var(--discord-blurple);
		text-decoration: none;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		transition: all 0.3s ease;
	}

	.tos-link:hover {
		background: rgba(88, 101, 242, 0.1);
		color: var(--rule-accent-high);
	}

	.link-icon {
		width: 1rem;
		height: 1rem;
	}

	/* Reduced motion */
	@media (prefers-reduced-motion: reduce) {
		.rule-card {
			animation: none;
			opacity: 1;
			transform: none;
		}

		.rule-card:hover {
			transform: none;
		}
	}
</style>
