 * Prevents render-blocking CSS on initial page load
 */
import DeferredSection from '@/components/utility/DeferredSection.astro';
import ProjectGallery from './ProjectGallery.astro';
---

<DeferredSection id="project-gallery" minHeight="450px" minHeightMobile="400px">
	<ProjectGallery />
</DeferredSection>
