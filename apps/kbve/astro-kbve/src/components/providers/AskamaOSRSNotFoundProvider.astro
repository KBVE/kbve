---
// AskamaOSRSNotFoundProvider - OSRS item not found template
// Askama variables: {{ item_query }}, {{ message }}

interface Props {
	class?: string;
}

const { class: className = '' } = Astro.props;

// Askama template placeholders
const askamaItemQuery = `{{ item_query }}`;
const askamaMessage = `{{ message }}`;
---

<div
	class:list={['w-full max-w-md mx-auto text-center', className]}
	role="main">
	<article
		class="bg-gradient-to-b from-[var(--sl-color-bg-nav)] to-[var(--sl-color-bg)] border border-[var(--sl-color-gray-5)] rounded-2xl p-8 sm:p-12 shadow-xl"
		aria-labelledby="not-found-title">
		<!-- Icon -->
		<div
			class="w-16 h-16 sm:w-20 sm:h-20 mx-auto mb-6 bg-[var(--sl-color-gray-6)] rounded-full flex items-center justify-center border-2 border-[var(--sl-color-gray-5)]"
			aria-hidden="true">
			<svg
				class="w-8 h-8 sm:w-10 sm:h-10 text-gray-400"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				aria-hidden="true"
				focusable="false">
				<circle cx="11" cy="11" r="8"></circle>
				<path d="M21 21l-4.35-4.35"></path>
				<path d="M8 8l6 6"></path>
				<path d="M14 8l-6 6"></path>
			</svg>
		</div>

		<!-- Title -->
		<h1
			id="not-found-title"
			class="text-xl sm:text-2xl font-bold text-[var(--sl-color-text)] mb-2 tracking-tight">
			Item Not Found
		</h1>

		<!-- Query -->
		<p
			class="text-lg sm:text-xl text-[#FFD700] font-semibold mb-4"
			aria-label="Search query">
			"<Fragment set:html={askamaItemQuery} />"
		</p>

		<!-- Message -->
		<p class="text-sm sm:text-base text-gray-400 mb-8" role="status">
			<Fragment set:html={askamaMessage} />
		</p>

		<!-- Links -->
		<nav class="flex flex-col gap-3" aria-label="Alternative actions">
			<a
				href={`https://oldschool.runescape.wiki/w/Special:Search?search=${askamaItemQuery}`}
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center justify-center gap-2 py-3 px-6 bg-[var(--sl-color-accent)] border border-[var(--sl-color-accent)] rounded-xl text-black text-sm font-medium transition-all hover:opacity-90 hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-[var(--sl-color-accent)] focus:ring-offset-2 focus:ring-offset-[var(--sl-color-bg)]"
				aria-label="Search for this item on the OSRS Wiki (opens in new tab)">
				<svg
					class="w-4 h-4"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					aria-hidden="true"
					focusable="false">
					<circle cx="11" cy="11" r="8"></circle>
					<path d="M21 21l-4.35-4.35"></path>
				</svg>
				Search OSRS Wiki
			</a>
			<a
				href="/"
				data-astro-prefetch
				class="flex items-center justify-center gap-2 py-3 px-6 bg-[var(--sl-color-bg)] border border-[var(--sl-color-gray-5)] rounded-xl text-[var(--sl-color-text)] text-sm font-medium transition-all hover:bg-[var(--sl-color-gray-6)] hover:border-gray-500 hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-[var(--sl-color-gray-3)] focus:ring-offset-2 focus:ring-offset-[var(--sl-color-bg)]"
				aria-label="Return to KBVE homepage">
				<svg
					class="w-4 h-4"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					aria-hidden="true"
					focusable="false">
					<path d="M19 12H5M12 19l-7-7 7-7"></path>
				</svg>
				Back to KBVE
			</a>
		</nav>
	</article>
</div>
