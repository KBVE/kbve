---
/**
 * Deferred wrapper for AstroGithubHero
 * Uses large rootMargin to load early but still defer CSS from initial render
 * Prevents 1073 lines of CSS from blocking LCP on mobile
 */
import DeferredSection from '@/components/utility/DeferredSection.astro';
import AstroGithubHero from './AstroGithubHero.astro';

interface Props {
	title?: string;
	subtitle?: string;
	commitsLabel?: string;
	viewAllLabel?: string;
	issuesLabel?: string;
	projectLabel?: string;
	errorMessage?: string;
	rank1Label?: string;
	rank2Label?: string;
	rank3Label?: string;
	newTabLabel?: string;
}

const props = Astro.props;
---

<DeferredSection
	id="github-hero"
	minHeight="500px"
	minHeightMobile="600px"
	rootMargin="500px"
	skeletonBg="linear-gradient(135deg, var(--sl-color-bg-nav, #0f172a) 0%, var(--sl-color-bg-sidebar, #1e293b) 100%)">
	<AstroGithubHero {...props} />
</DeferredSection>
