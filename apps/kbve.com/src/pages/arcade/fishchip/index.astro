    style={`background-image: url('https://utfs.io/f/ae961975-ad95-4247-91cc-2c573d6fbe3e-1t0m0l.webp')`}
    >

    <VE widget="header:embed:canvas" scene="/embed/js/phaser/fish/TownScene.js" >
           
