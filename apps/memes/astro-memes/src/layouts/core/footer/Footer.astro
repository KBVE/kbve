---
import { UserStatus } from './UserStatus';

const quickLinks = [
  { label: 'Home', href: '/' },
  { label: 'Memes', href: '/memes' },
  { label: 'Create', href: '/create' },
  { label: 'Trending', href: '/trending' },
  { label: 'About', href: '/about' }
];

const communityLinks = [
  { label: 'Discord', href: 'https://kbve.com/discord/' },
  { label: 'GitHub', href: 'https://github.com/kbve/kbve', external: true },
  { label: 'Support', href: '/support' }
];

const legalLinks = [
  { label: 'Privacy Policy', href: 'https://kbve.com/legal/privacy' },
  { label: 'Terms of Service', href: 'https://kbve.com/legal/tos/' },
  { label: 'Legal', href: 'https://kbve.com/legal/' }
];

const socialLinks = [
  { href: 'https://github.com/kbve/kbve', label: 'GitHub' },
  { href: 'https://kbve.com/x/', label: 'Twitter' },
  { href: 'https://kbve.com/discord/', label: 'Discord' },
  { href: 'https://kbve.com/contact/', label: 'Email' }
];
---

<footer class="bg-zinc-900/90 backdrop-blur-md border-t border-zinc-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <!-- Theater Icon -->
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-emerald-400 transition-all duration-500 hover:scale-125 hover:rotate-[360deg] hover:text-green-300 drop-shadow-lg">
            <path d="M2 16.1A5 5 0 0 1 5.9 20M6.3 20.7l13.38-2.39c1.2-.21 1.2-1.9 0-2.11L6.3 14.1"/>
            <path d="m6.9 17.9 8.4-2.9"/>
            <path d="M5 10.5a5 5 0 0 1 5-5"/>
            <path d="m5 9 5-3 5 3"/>
            <path d="M10 6.5a5 5 0 0 1 5 5"/>
            <path d="m10 9 5-3 5 3"/>
            <path d="M15 8.5a5 5 0 0 1 5 5"/>
          </svg>
          <span class="text-2xl font-bold bg-gradient-to-r from-emerald-400 to-green-400 bg-clip-text text-transparent">
            Meme.sh
          </span>
        </div>
        <p class="text-neutral-400 text-sm leading-relaxed mb-6 max-w-md">
          The ultimate destination for meme creators and enthusiasts. Share, discover, and create 
          the funniest content on the internet with our vibrant community.
        </p>
        
        <!-- Social Links -->
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="p-2 rounded-lg text-neutral-400 hover:text-emerald-400 hover:bg-emerald-500/10 transition-all duration-300 hover:scale-110 hover:shadow-lg hover:shadow-emerald-500/20 border border-zinc-700 hover:border-emerald-500/50"
              aria-label={social.label}
              target={social.href.startsWith('http') ? '_blank' : undefined}
              rel={social.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            >
              {social.label === 'GitHub' && (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
                  <path d="M9 18c-4.51 2-5-2-7-2"/>
                </svg>
              )}
              {social.label === 'Twitter' && (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>
                </svg>
              )}
              {social.label === 'Discord' && (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="m3 21 1.9-5.7a8.5 8.5 0 1 1 3.8 3.8z"/>
                </svg>
              )}
              {social.label === 'Email' && (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold text-neutral-200 mb-4">Quick Links</h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-neutral-400 hover:text-emerald-400 transition-all duration-300 hover:translate-x-1 inline-block text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Community -->
      <div class="col-span-1">
        <h3 class="text-lg font-semibold text-neutral-200 mb-4">Community</h3>
        <ul class="space-y-3">
          {communityLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-neutral-400 hover:text-emerald-400 transition-all duration-300 hover:translate-x-1 inline-flex items-center space-x-2 text-sm group"
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label === 'Discord' && (
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:scale-110 transition-transform duration-300">
                    <path d="m3 21 1.9-5.7a8.5 8.5 0 1 1 3.8 3.8z"/>
                  </svg>
                )}
                {link.label === 'GitHub' && (
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:scale-110 transition-transform duration-300">
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
                    <path d="M9 18c-4.51 2-5-2-7-2"/>
                  </svg>
                )}
                <span>{link.label}</span>
                {link.external && (
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-50 group-hover:opacity-100 transition-opacity duration-300">
                    <path d="M15 3h6v6"/>
                    <path d="M10 14 21 3"/>
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-zinc-700 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="flex items-center space-x-2 text-neutral-400 text-sm mb-4 md:mb-0">
          <span>Â© 2025 Meme.sh. Made with</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-400 animate-pulse">
            <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.29 1.51 4.04 3 5.5l7 7z"/>
          </svg>
          <span>by the</span>
          <a 
            href="https://kbve.com/" 
            target="_blank" 
            rel="noopener"
            class="text-emerald-400 hover:text-emerald-300 transition-colors duration-300 hover:underline font-medium"
          >
            KBVE team
          </a>
        </div>
        
        <div class="flex flex-wrap justify-center md:justify-end space-x-6">
          {legalLinks.map((link) => (
            <a
              href={link.href}
              class="text-neutral-400 hover:text-emerald-400 transition-colors duration-300 text-sm hover:underline"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>

      <!-- Dynamic User Status - React Component -->
      <UserStatus client:only="react" />
    </div>
  </div>
</footer>