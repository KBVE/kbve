---
// Astro wrapper for the React-based Member Only access control
import ReactMemberOnly from '../react/auth/ReactMemberOnly.tsx';

interface Props {
  /** Custom message for non-authenticated users */
  message?: string;
  /** Whether to show the OAuth login component */
  showOAuth?: boolean;
}

const { message, showOAuth = true } = Astro.props;
---

<ReactMemberOnly 
  client:only="react" 
  message={message}
  showOAuth={showOAuth}
>
  <slot />
</ReactMemberOnly>
