---
// Astro wrapper for Member-Only Premium Features
import MemberOnlyPremiumComponent from '../react/auth/MemberOnlyPremium';

interface Props {
  /** Custom message for non-authenticated users */
  message?: string;
  /** Whether to show the OAuth login component */
  showOAuth?: boolean;
  /** Custom CSS classes */
  className?: string;
}

const { message, showOAuth = true, className } = Astro.props;
---

<MemberOnlyPremiumComponent 
  client:only="react" 
  message={message}
  showOAuth={showOAuth}
  className={className}
/>
