---
import { MemeDiscoveryComponent } from './MemeDiscoveryComponent';
---

<section class="relative" id="discover">
    <!-- MemeDiscovery Skeleton Loader -->
    <div id="meme-discovery-skeleton-loader" class="min-h-screen transition-opacity duration-500 ease-out">
        <div class="max-w-md mx-auto p-4">
            <!-- Mode Selector Skeleton -->
            <div class="mb-8 flex justify-center">
                <div class="flex items-center space-x-2 bg-zinc-900/90 backdrop-blur-md border border-zinc-700 rounded-full px-4 py-2">
                    <div class="w-11 h-11 bg-zinc-700/60 rounded-full animate-pulse"></div>
                    <div class="w-11 h-11 bg-zinc-700/60 rounded-full animate-pulse"></div>
                    <div class="w-11 h-11 bg-zinc-700/60 rounded-full animate-pulse"></div>
                </div>
            </div>

            <!-- Meme Card Skeleton -->
            <div class="space-y-6">
                <div class="bg-zinc-900 border border-zinc-700 rounded-2xl overflow-hidden aspect-[3/4] relative">
                    <!-- Image skeleton -->
                    <div class="w-full h-3/4 bg-zinc-700/60 animate-pulse"></div>
                    
                    <!-- Content overlay skeleton -->
                    <div class="absolute bottom-0 left-0 right-0 p-6">
                        <!-- Title skeleton -->
                        <div class="w-3/4 h-6 bg-zinc-700/60 rounded animate-pulse mb-3"></div>
                        
                        <!-- Author skeleton -->
                        <div class="flex items-center space-x-2 mb-4">
                            <div class="w-8 h-8 bg-zinc-700/60 rounded-full animate-pulse"></div>
                            <div class="w-24 h-4 bg-zinc-700/60 rounded animate-pulse"></div>
                        </div>
                        
                        <!-- Tags skeleton -->
                        <div class="flex space-x-2 mb-4">
                            <div class="w-16 h-6 bg-zinc-700/60 rounded-full animate-pulse"></div>
                            <div class="w-20 h-6 bg-zinc-700/60 rounded-full animate-pulse"></div>
                            <div class="w-18 h-6 bg-zinc-700/60 rounded-full animate-pulse"></div>
                        </div>
                        
                        <!-- Stats skeleton -->
                        <div class="flex space-x-4">
                            <div class="w-12 h-4 bg-zinc-700/60 rounded animate-pulse"></div>
                            <div class="w-16 h-4 bg-zinc-700/60 rounded animate-pulse"></div>
                            <div class="w-14 h-4 bg-zinc-700/60 rounded animate-pulse"></div>
                        </div>
                    </div>
                    
                    <!-- Action buttons skeleton -->
                    <div class="absolute top-4 right-4 flex flex-col space-y-2">
                        <div class="w-10 h-10 bg-zinc-700/60 rounded-full animate-pulse"></div>
                        <div class="w-10 h-10 bg-zinc-700/60 rounded-full animate-pulse"></div>
                        <div class="w-10 h-10 bg-zinc-700/60 rounded-full animate-pulse"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Floating Navigation Skeleton -->
        <div class="fixed bottom-6 left-1/2 transform -translate-x-1/2 z-50">
            <div class="flex items-center space-x-2 bg-zinc-900/90 backdrop-blur-md border border-zinc-700 rounded-full px-4 py-2">
                <div class="w-11 h-11 bg-zinc-700/60 rounded-full animate-pulse"></div>
                <div class="w-11 h-11 bg-zinc-700/60 rounded-full animate-pulse"></div>
                <div class="w-11 h-11 bg-zinc-700/60 rounded-full animate-pulse"></div>
            </div>
        </div>
    </div>

    <!-- Actual MemeDiscovery Component -->
    <div id="meme-discovery-content" class="opacity-0 transition-opacity duration-500 ease-in">
        <MemeDiscoveryComponent client:only="react" />
    </div>
</section>

<script>
    // MemeDiscovery fade-in logic
    document.addEventListener('DOMContentLoaded', () => {
        const skeleton = document.getElementById('meme-discovery-skeleton-loader');
        const content = document.getElementById('meme-discovery-content');
        
        // Wait a bit longer for React component to mount
        setTimeout(() => {
            if (skeleton && content) {
                skeleton.style.opacity = '0';
                content.style.opacity = '1';
                
                setTimeout(() => {
                    skeleton.remove();
                }, 500);
            }
        }, 600);
    });
</script>
