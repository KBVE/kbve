---
// Hero section with skeleton loader
---

<section class="relative min-h-screen">
    <!-- Hero Skeleton Loader -->
    <div id="hero-skeleton-loader" class="bg-gradient-to-br from-zinc-950 via-zinc-900 to-emerald-950/20 transition-opacity duration-500 ease-out">
        <div class="absolute inset-0 bg-[url('/assets/images/bg/hexgrid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]">
            <div class="absolute inset-0 shimmer-bg opacity-30"></div>
        </div>
        
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16">
            <div class="text-center">
                <!-- Title Skeleton -->
                <div class="mb-6">
                    <div class="w-96 h-16 bg-zinc-700/60 rounded-lg animate-pulse mx-auto mb-4"></div>
                    <div class="w-80 h-16 bg-zinc-700/60 rounded-lg animate-pulse mx-auto"></div>
                </div>
                
                <!-- Subtitle Skeleton -->
                <div class="mb-8 max-w-3xl mx-auto">
                    <div class="w-full h-6 bg-zinc-700/60 rounded animate-pulse mb-2"></div>
                    <div class="w-3/4 h-6 bg-zinc-700/60 rounded animate-pulse mx-auto"></div>
                </div>
                
                <!-- Stats Skeleton -->
                <div class="flex flex-wrap justify-center gap-8 mb-12">
                    <div class="text-center">
                        <div class="w-20 h-8 bg-zinc-700/60 rounded animate-pulse mb-2"></div>
                        <div class="w-16 h-4 bg-zinc-700/60 rounded animate-pulse"></div>
                    </div>
                    <div class="text-center">
                        <div class="w-20 h-8 bg-zinc-700/60 rounded animate-pulse mb-2"></div>
                        <div class="w-16 h-4 bg-zinc-700/60 rounded animate-pulse"></div>
                    </div>
                    <div class="text-center">
                        <div class="w-20 h-8 bg-zinc-700/60 rounded animate-pulse mb-2"></div>
                        <div class="w-16 h-4 bg-zinc-700/60 rounded animate-pulse"></div>
                    </div>
                </div>

                <!-- CTA Buttons Skeleton -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
                    <div class="w-48 h-14 bg-zinc-700/60 rounded-xl animate-pulse"></div>
                    <div class="w-48 h-14 bg-zinc-700/60 rounded-xl animate-pulse"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actual Hero Content -->
    <div id="hero-content" class="opacity-0 transition-opacity duration-500 ease-in absolute inset-0">
        <div class="bg-gradient-to-br from-zinc-950 via-zinc-900 to-emerald-950/20 h-full">
            <div class="absolute inset-0 bg-[url('/assets/images/bg/hexgrid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]">
                <div class="absolute inset-0 shimmer-bg opacity-30"></div>
            </div>
            
            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16 h-full flex items-center">
                <div class="text-center w-full">
                    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold bg-gradient-to-r from-emerald-400 via-green-400 to-emerald-500 bg-clip-text text-transparent mb-6">
                        Discover Amazing Memes
                    </h1>
                    <p class="text-xl md:text-2xl text-neutral-400 mb-8 max-w-3xl mx-auto">
                        Swipe, scroll, and tap your way through the internet's funniest content. 
                        Like what you love, skip what you don't.
                    </p>
                    
                    <!-- Quick Stats -->
                    <div class="flex flex-wrap justify-center gap-8 mb-12">
                        <div class="text-center">
                            <div class="text-3xl font-bold text-emerald-400">2.5M+</div>
                            <div class="text-neutral-500">Memes</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-bold text-emerald-400">150K+</div>
                            <div class="text-neutral-500">Creators</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-bold text-emerald-400">5M+</div>
                            <div class="text-neutral-500">Laughs</div>
                        </div>
                    </div>

                    <!-- CTA Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
                        <button class="px-8 py-4 bg-gradient-to-r from-emerald-500 to-green-500 hover:from-emerald-400 hover:to-green-400 text-white font-semibold rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-emerald-500/25">
                            Start Discovering
                        </button>
                        <button class="px-8 py-4 border border-emerald-500/50 text-emerald-400 hover:bg-emerald-500/10 font-semibold rounded-xl transition-all duration-300 hover:scale-105">
                            Upload Your Meme
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .shimmer-bg {
        background: linear-gradient(
            90deg,
            transparent 0%,
            transparent 40%,
            rgba(16, 185, 129, 0.15) 50%,
            rgba(34, 197, 94, 0.1) 55%,
            transparent 60%,
            transparent 100%
        );
        animation: shimmer 8s ease-in-out infinite;
        will-change: transform;
    }

    @keyframes shimmer {
        0% {
            transform: translateX(-100%);
        }
        50% {
            transform: translateX(100vw);
        }
        100% {
            transform: translateX(-100%);
        }
    }

    /* Reduce motion for users who prefer it */
    @media (prefers-reduced-motion: reduce) {
        .shimmer-bg {
            animation: none;
        }
    }
</style>

<script>
    // Hero fade-in logic
    document.addEventListener('DOMContentLoaded', () => {
        const skeleton = document.getElementById('hero-skeleton-loader');
        const content = document.getElementById('hero-content');
        
        setTimeout(() => {
            if (skeleton && content) {
                skeleton.style.opacity = '0';
                content.style.opacity = '1';
                
                setTimeout(() => {
                    skeleton.remove();
                }, 500);
            }
        }, 300);
    });
</script>
