---
import Layouts from 'src/layouts/core/Layouts.astro';
import UsernameBalance from 'src/components/react/onboarding/UsernameBalance.tsx';

const pageTitle: string = `Complete Your Setup | Memes`;
const title: string = `Welcome to Memes!`;
const subTitle: string = `Let's set up your username to get started`;
---

<Layouts 
  title={pageTitle}
  Onboarding={false}
>
  <section class="min-h-screen flex items-center justify-center px-6 py-12 sm:px-8 lg:px-12">
    <div class="mx-auto max-w-2xl w-full">
      {/* Header */}
      <div class="text-center mb-8">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4 drop-shadow-lg">
          {title}
        </h1>
        <h2 class="text-xl text-zinc-300 mb-6 font-medium">
          {subTitle}
        </h2>
        <p class="text-base text-zinc-400 max-w-xl mx-auto">
          Choose a unique username to complete your profile setup. This will be your identity in the memes community.
        </p>
      </div>

      {/* Onboarding Form */}
      <div class="bg-gradient-to-br from-zinc-800/80 to-zinc-900/80 border border-emerald-500/20 rounded-lg p-8 backdrop-blur-sm">
        <UsernameBalance client:only="react" />
      </div>

      {/* Help Section */}
      <div class="mt-8 text-center">
        <div class="bg-zinc-800/50 border border-zinc-700/50 rounded-lg p-6">
          <h3 class="text-lg font-semibold mb-3 text-white">
            Username Guidelines
          </h3>
          <ul class="text-sm text-zinc-400 space-y-2 text-left max-w-md mx-auto">
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              3-30 characters long
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Lowercase letters and numbers only
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Can include underscores (_) and hyphens (-)
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Must be unique (no duplicates)
            </li>
          </ul>
        </div>
      </div>

      {/* Navigation Help */}
      <div class="mt-6 text-center">
        <p class="text-sm text-zinc-500">
          Already completed setup? 
          <a href="/profile" class="text-emerald-400 hover:text-emerald-300 underline ml-1">
            View your profile
          </a>
        </p>
      </div>
    </div>
  </section>
</Layouts>