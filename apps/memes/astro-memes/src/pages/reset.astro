---
import Layouts from 'src/layouts/core/Layouts.astro';

const pageTitle: string = `Reset Password | Memes`;
const title: string = `Reset Your Password`;
const subTitle: string = `Securely reset your account password`;
---

<Layouts 
  title={pageTitle}
  Onboarding={false}
>
  <section class="min-h-screen flex items-center justify-center px-6 py-12 sm:px-8 lg:px-12">
    <div class="mx-auto max-w-2xl w-full">
      {/* Header */}
      <div class="text-center mb-8">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4 drop-shadow-lg">
          {title}
        </h1>
        <h2 class="text-xl text-zinc-300 mb-6 font-medium">
          {subTitle}
        </h2>
        <p class="text-base text-zinc-400 max-w-xl mx-auto">
          To reset your password, you'll be redirected to the main KBVE platform where you can securely manage your account credentials.
        </p>
      </div>

      {/* Reset Form */}
      <div class="bg-gradient-to-br from-zinc-800/80 to-zinc-900/80 border border-emerald-500/20 rounded-lg p-8 backdrop-blur-sm">
        <div class="text-center">
          <div class="mb-6">
            <svg class="w-16 h-16 text-emerald-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-3a1 1 0 011-1h2.586l6.243-6.243A6 6 0 0121 9z"></path>
            </svg>
            <h3 class="text-xl font-semibold text-white mb-2">Password Reset</h3>
            <p class="text-zinc-400 mb-6">
              Click the button below to access the secure password reset portal on the main KBVE platform.
            </p>
          </div>

          <a 
            href="https://kbve.com/reset/" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            Reset Password on KBVE
          </a>
        </div>
      </div>

      {/* Help Section */}
      <div class="mt-8 text-center">
        <div class="bg-zinc-800/50 border border-zinc-700/50 rounded-lg p-6">
          <h3 class="text-lg font-semibold mb-3 text-white">
            Need Help?
          </h3>
          <ul class="text-sm text-zinc-400 space-y-2 text-left max-w-md mx-auto">
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Check your email for reset instructions
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Follow the secure link from KBVE
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Create a strong new password
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Return here after resetting
            </li>
          </ul>
        </div>
      </div>

      {/* Navigation Help */}
      <div class="mt-6 text-center">
        <p class="text-sm text-zinc-500">
          Remember your password? 
          <a href="/login" class="text-emerald-400 hover:text-emerald-300 underline ml-1">
            Back to login
          </a>
        </p>
      </div>
    </div>
  </section>
</Layouts>
