---
import Layouts from 'src/layouts/core/Layouts.astro';

const pageTitle: string = `Reset Password | Memes`;
const title: string = `Reset Your Password`;
const subTitle: string = `Securely reset your account password`;
---

<Layouts 
  title={pageTitle}
  Onboarding={false}
>
  <section class="min-h-screen flex items-center justify-center px-6 py-12 sm:px-8 lg:px-12">
    <div class="mx-auto max-w-2xl w-full">
      {/* Header */}
      <div class="text-center mb-8">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4 drop-shadow-lg">
          {title}
        </h1>
        <h2 class="text-xl text-zinc-300 mb-6 font-medium">
          {subTitle}
        </h2>
        <p class="text-base text-zinc-400 max-w-xl mx-auto">
          To reset your password, you'll be redirected to the main KBVE platform where you can securely manage your account credentials.
        </p>
      </div>

      {/* Reset Form */}
      <div class="relative bg-gradient-to-br from-zinc-800/90 to-zinc-900/90 border border-emerald-500/30 rounded-2xl p-10 backdrop-blur-md overflow-hidden shadow-2xl">
        {/* Animated background elements */}
        <div class="absolute inset-0 opacity-10">
          <div class="absolute top-0 left-0 w-32 h-32 bg-emerald-400 rounded-full blur-3xl animate-pulse"></div>
          <div class="absolute bottom-0 right-0 w-40 h-40 bg-blue-400 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
        </div>
        
        <div class="relative text-center">
          <div class="mb-8">
            {/* Enhanced icon with glow effect */}
            <div class="relative mx-auto w-20 h-20 mb-6">
              <div class="absolute inset-0 bg-emerald-400/20 rounded-full blur-xl"></div>
              <div class="relative bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-full p-4 shadow-xl">
                <svg class="w-12 h-12 text-white animate-spin" style="animation-duration: 3s;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
              </div>
            </div>
            
            <h3 class="text-2xl font-bold text-white mb-3 bg-gradient-to-r from-white to-emerald-200 bg-clip-text text-transparent">
              Password Reset Portal
            </h3>
            <p class="text-zinc-300 mb-8 leading-relaxed max-w-md mx-auto">
              Securely reset your password through the main KBVE platform. Your security is our top priority.
            </p>
          </div>

          {/* Enhanced button with better styling */}
          <div class="space-y-4">
            <a 
              href="https://kbve.com/reset/" 
              target="_blank"
              rel="noopener noreferrer"
              class="group relative inline-flex items-center gap-3 bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-500 hover:to-emerald-600 text-white font-bold py-4 px-8 rounded-xl transition-all duration-300 shadow-xl hover:shadow-emerald-500/25 hover:scale-105 transform"
            >
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-400 to-emerald-600 rounded-xl blur opacity-30 group-hover:opacity-50 transition-opacity"></div>
              <svg class="relative w-6 h-6 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              <span class="relative">Reset Password Securely</span>
              <svg class="relative w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
            
            <p class="text-xs text-zinc-500 flex items-center justify-center gap-2">
              <svg class="w-4 h-4 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
              </svg>
              Secured by KBVE authentication
            </p>
          </div>
        </div>
      </div>

      {/* Help Section */}
      <div class="mt-10 text-center">
        <div class="bg-gradient-to-br from-zinc-800/70 to-zinc-900/70 border border-zinc-600/30 rounded-2xl p-8 backdrop-blur-md shadow-xl">
          <div class="flex items-center justify-center gap-3 mb-6">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white">
              Reset Process Guide
            </h3>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-2xl mx-auto">
            <div class="bg-zinc-700/30 rounded-xl p-4 border border-zinc-600/20 hover:border-emerald-500/30 transition-colors">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-emerald-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <span class="text-xs font-bold text-white">1</span>
                </div>
                <div class="text-left">
                  <h4 class="text-white font-semibold text-sm mb-1">Check Email</h4>
                  <p class="text-zinc-400 text-xs">Look for reset instructions in your inbox</p>
                </div>
              </div>
            </div>
            
            <div class="bg-zinc-700/30 rounded-xl p-4 border border-zinc-600/20 hover:border-emerald-500/30 transition-colors">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-emerald-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <span class="text-xs font-bold text-white">2</span>
                </div>
                <div class="text-left">
                  <h4 class="text-white font-semibold text-sm mb-1">Secure Link</h4>
                  <p class="text-zinc-400 text-xs">Follow the authenticated KBVE link</p>
                </div>
              </div>
            </div>
            
            <div class="bg-zinc-700/30 rounded-xl p-4 border border-zinc-600/20 hover:border-emerald-500/30 transition-colors">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-emerald-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <span class="text-xs font-bold text-white">3</span>
                </div>
                <div class="text-left">
                  <h4 class="text-white font-semibold text-sm mb-1">New Password</h4>
                  <p class="text-zinc-400 text-xs">Create a strong, unique password</p>
                </div>
              </div>
            </div>
            
            <div class="bg-zinc-700/30 rounded-xl p-4 border border-zinc-600/20 hover:border-emerald-500/30 transition-colors">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-emerald-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <span class="text-xs font-bold text-white">4</span>
                </div>
                <div class="text-left">
                  <h4 class="text-white font-semibold text-sm mb-1">Return Here</h4>
                  <p class="text-zinc-400 text-xs">Come back to access your account</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Navigation Help */}
      <div class="mt-8 text-center">
        <div class="bg-zinc-800/40 border border-zinc-700/40 rounded-xl p-6 backdrop-blur-sm">
          <p class="text-sm text-zinc-400 mb-4">
            Remember your password? 
          </p>
          <a href="/login" class="inline-flex items-center gap-2 text-emerald-400 hover:text-emerald-300 font-medium transition-colors group">
            <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Login
          </a>
        </div>
      </div>
    </div>
  </section>
</Layouts>
