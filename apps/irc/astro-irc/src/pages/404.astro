---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Not Found">
  <main class="min-h-screen flex flex-col items-center justify-center p-4">
    <h1 class="text-6xl font-bold text-gray-600 mb-4">404</h1>
    <p class="text-gray-400 mb-6">Page not found</p>
    <a
      href="/"
      class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg text-sm transition-colors"
    >
      Back to Home
    </a>
  </main>
</Layout>
