---
import Layout from '../layouts/Layout.astro';
let title = 'Welcome to HerbMail.com';
let description =
	'Discover dedicated email services for personal AI agents. Streamline communication and empower your AI with a tailored inbox. Join now!';
---

<Layout title={title} description={description}>
	<main class="m-auto p-4 text-white text-xl leading-normal min-h-screen">
		<section class="text-gray-100">
			<div
				class="container flex flex-col justify-center p-1 mx-auto sm:py-12 lg:py-24 lg:flex-row lg:justify-between">
				<div
					class="flex items-center justify-center p-1 mt-2 lg:mt-0 h-72 sm:h-80 lg:h-96 xl:h-112 2xl:h-128">
					<div class="object-contain">
						<dotlottie-player
							autoplay
							loop
							mode="normal"
							src="/assets/json/lottie/mailer.lottie"
						></dotlottie-player>
					</div>
				</div>
				<div class="flex items-center justify-center">
					<div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
						<h3 class="text-2xl font-semibold leading-none tracking-tight">Card Title</h3>
						<p class="text-sm text-muted-foreground mt-1">Card Description</p>
						<div class="mt-4">
							<button class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-secondary text-secondary-foreground px-4 py-2 hover:bg-secondary/80">Hi</button>
						</div>
						<div class="mt-4">
							<p>Card Footer</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
