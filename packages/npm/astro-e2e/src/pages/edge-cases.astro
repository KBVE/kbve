---
import DroidProvider from '../../../astro/src/components/DroidProvider.astro';
import { RapidFireTest } from '../components/RapidFireTest';
import { CnEdgeCaseTest } from '../components/CnEdgeCaseTest';
import { MultiConsumerTest } from '../components/MultiConsumerTest';
import { workerURLs } from '../lib/workers';
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Edge Case Tests</title>
	</head>
	<body style="padding: 1rem; font-family: sans-serif;">
		<nav data-testid="nav" style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
			<a data-testid="nav-home" href="/">Menu</a>
			<a data-testid="nav-provider" href="/provider">Provider + Status</a>
			<a data-testid="nav-events" href="/events">Event Hook</a>
			<a data-testid="nav-edge-cases" href="/edge-cases">Edge Cases</a>
		</nav>

		<div style="border: 1px solid #ccc; padding: 1rem; margin-bottom: 1rem;">
			<DroidProvider workerURLs={workerURLs}>
				<RapidFireTest client:only="react" />
			</DroidProvider>
		</div>

		<div style="border: 1px solid #ccc; padding: 1rem; margin-bottom: 1rem;">
			<CnEdgeCaseTest client:only="react" />
		</div>

		<div style="border: 1px solid #ccc; padding: 1rem; margin-bottom: 1rem;">
			<MultiConsumerTest client:only="react" workerURLs={workerURLs} />
		</div>
	</body>
</html>
