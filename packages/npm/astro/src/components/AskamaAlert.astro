---
interface Props {
	class?: string;
}
const { class: className } = Astro.props;
const fragment = `<div role="alert" class="rounded-lg border p-4 {% if variant == "success" %}border-green-200 bg-green-50 text-green-800 dark:border-green-800 dark:bg-green-900 dark:text-green-200{% elif variant == "warning" %}border-yellow-200 bg-yellow-50 text-yellow-800 dark:border-yellow-800 dark:bg-yellow-900 dark:text-yellow-200{% elif variant == "error" %}border-red-200 bg-red-50 text-red-800 dark:border-red-800 dark:bg-red-900 dark:text-red-200{% else %}border-blue-200 bg-blue-50 text-blue-800 dark:border-blue-800 dark:bg-blue-900 dark:text-blue-200{% endif %}">
    {{ message }}
</div>`;
---
<div class={className}>
	<Fragment set:html={fragment} />
</div>
