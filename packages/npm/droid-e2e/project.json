{
	"name": "droid-e2e",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/npm/droid-e2e/src",
	"projectType": "application",
	"implicitDependencies": ["droid"],
	"targets": {
		"e2e": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"npx playwright test --config=packages/npm/droid-e2e/playwright.config.ts"
				],
				"cwd": "{workspaceRoot}"
			}
		},
		"serve": {
			"executor": "@nx/vite:dev-server",
			"options": {
				"buildTarget": "droid-e2e:build"
			}
		},
		"build": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/npm/droid-e2e"
			}
		}
	}
}
