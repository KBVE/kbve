---
import ApplicationsVirtuoso from './ApplicationsVirtuoso.tsx';

export interface Props {
	id?: string;
	className?: string;
	apiEndpoint?: string;
	height?: number;
	itemsPerPage?: number;
}

const { 
	id = 'entity-virtuoso', 
	className = '',
	apiEndpoint = '/api/applications.json',
	height = 600,
	itemsPerPage = 50
} = Astro.props;
---

<div id={id} class={className}>
	<ApplicationsVirtuoso 
		apiEndpoint={apiEndpoint}
		height={height}
		itemsPerPage={itemsPerPage}
		className=""
		client:only="react" 
	/>
</div>