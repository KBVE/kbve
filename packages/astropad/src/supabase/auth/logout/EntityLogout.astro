---
import { ReactLogout } from '@kbve/astropad';
---

<div class="logout-container">
  <!-- Skeleton loading state while React component hydrates -->
  <div class="logout-skeleton" data-skeleton="logout">
    <div class="p-4 rounded-lg border bg-slate-900 border-slate-700">
      <div class="text-center space-y-4">
        <!-- Enhanced skeleton content with shimmer effects -->
        <div class="animate-pulse">
          <!-- Icon area with shimmer -->
          <div class="relative w-12 h-12 mx-auto rounded-full bg-red-500/10 border border-red-500/20 mb-4 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-slate-500/10 to-transparent animate-shimmer"></div>
            <div class="flex items-center justify-center w-full h-full">
              <div class="w-6 h-6 bg-slate-600/30 rounded"></div>
            </div>
          </div>
          
          <!-- Text area with shimmer -->
          <div class="space-y-2 mb-4">
            <div class="relative w-32 h-5 bg-slate-600/20 rounded mx-auto overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-slate-500/10 to-transparent animate-shimmer"></div>
            </div>
            <div class="relative w-48 h-4 bg-slate-600/20 rounded mx-auto overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-slate-500/10 to-transparent animate-shimmer"></div>
            </div>
          </div>
          
          <!-- Enhanced button area -->
          <div class="grid grid-cols-2 gap-3 items-baseline justify-items-center">
            <!-- Cancel button skeleton -->
            <div class="relative min-w-[80px] h-10 bg-slate-700/60 border border-slate-600/60 rounded-md overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-slate-500/10 to-transparent animate-shimmer"></div>
              <div class="flex items-center justify-center gap-2 h-full px-4">
                <div class="w-4 h-4 bg-slate-500/30 rounded"></div>
                <div class="w-10 h-3 bg-slate-500/30 rounded"></div>
              </div>
            </div>
            
            <!-- Logout button skeleton -->
            <div class="relative min-w-[80px] h-10 bg-red-600/60 border border-red-600/60 rounded-md overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-red-500/10 to-transparent animate-shimmer"></div>
              <div class="flex items-center justify-center gap-2 h-full px-4">
                <div class="w-4 h-4 bg-red-400/30 rounded"></div>
                <div class="w-8 h-3 bg-red-400/30 rounded"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- React component will replace the skeleton when hydrated -->
  <ReactLogout client:only="react" />
</div>

<style>
  .logout-container {
    position: relative;
    min-height: 200px; /* Prevent layout shift */
  }
  
  .logout-skeleton {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 1;
    z-index: 10;
    transition: opacity 0.3s ease-in-out;
  }
  
  .logout-skeleton.fade-out {
    opacity: 0;
    pointer-events: none;
  }
  
  /* React component container */
  .logout-container > :last-child {
    position: relative;
    z-index: 20;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }
  
  .logout-container.hydrated > :last-child {
    opacity: 1;
  }
  
  /* Custom shimmer animation */
  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  
  .animate-shimmer {
    animation: shimmer 2s ease-in-out infinite;
  }
</style>